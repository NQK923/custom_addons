                                                    <t t-if="error.get('coverage_rate')">
                                                        <div class="invalid-feedback">
                                                            <i class="fa fa-exclamation-circle mr-1"></i>
                                                            <t t-esc="error.get('coverage_rate')"/>
                                                        </div>
                                                    </t>
                                                </div>

                                                <!-- Có giá trị đến -->
                                                <div class="form-group mb-0">
