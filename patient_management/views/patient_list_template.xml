<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="patient_list_template" name="Danh sách bệnh nhân">
        <t t-call="website.layout">
            <div class="o_patient_container py-5">
                <!-- Notification area -->
                <t t-if="message">
                    <div t-attf-class="o_patient_notification #{message_type or 'info'} mb-4">
                        <t t-if="message_type == 'success'">
                            <i class="fa fa-check-circle me-2"/>
                        </t>
                        <t t-elif="message_type == 'warning'">
                            <i class="fa fa-exclamation-triangle me-2"/>
                        </t>
                        <t t-elif="message_type == 'error'">
                            <i class="fa fa-exclamation-circle me-2"/>
                        </t>
                        <t t-else="">
                            <i class="fa fa-info-circle me-2"/>
                        </t>
                        <span t-esc="message"/>
                    </div>
                </t>
                <t t-if="error_message">
                    <div class="o_patient_notification error mb-4">
                        <i class="fa fa-exclamation-circle me-2"/>
                        <span t-esc="error_message"/>
                    </div>
                </t>

                <!-- Header section với title và nút thêm mới -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="mb-0 fw-bold">Danh sách bệnh nhân</h1>
                        <p class="text-muted mb-0">Quản lý tất cả thông tin bệnh nhân tại phòng khám</p>
                    </div>
                    <a href="/patients/create" class="btn btn-primary btn-icon">
                        <i class="fa fa-plus-circle"/> Thêm bệnh nhân mới
                    </a>
                </div>

                <!-- Search and filter section -->
                <div class="o_patient_search mb-4">
                    <form method="GET" class="row g-3">
                        <div class="col-md-6">
                            <div class="input-group">
                                <input type="text" name="search" class="form-control" placeholder="Tìm theo mã, tên hoặc SĐT..."
                                    t-att-value="request.params.get('search', '')"/>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"/> Tìm kiếm
                                </button>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <select name="patient_type" class="form-select">
                                <option value="">-- Loại bệnh nhân --</option>
                                <option value="outpatient" t-att-selected="request.params.get('patient_type') == 'outpatient'">Ngoại trú</option>
                                <option value="inpatient" t-att-selected="request.params.get('patient_type') == 'inpatient'">Nội trú</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <select name="gender" class="form-select">
                                <option value="">-- Giới tính --</option>
                                <option value="male" t-att-selected="request.params.get('gender') == 'male'">Nam</option>
                                <option value="female" t-att-selected="request.params.get('gender') == 'female'">Nữ</option>
                                <option value="other" t-att-selected="request.params.get('gender') == 'other'">Khác</option>
                            </select>
                        </div>

                        <div class="col-12 d-flex justify-content-end">
                            <a href="/patients" class="btn btn-outline-secondary me-2">
                                <i class="fa fa-refresh"/> Xóa bộ lọc
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-filter"/> Áp dụng bộ lọc
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Patients List Card -->
                <div class="o_patient_card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3>Danh sách bệnh nhân</h3>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fa fa-sort"/> Sắp xếp
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" t-att-href="'/patients?sort=code' + ('&amp;search=' + request.params.get('search')) if request.params.get('search') else '/patients?sort=code'">Theo mã</a></li>
                                <li><a class="dropdown-item" t-att-href="'/patients?sort=date' + ('&amp;search=' + request.params.get('search')) if request.params.get('search') else '/patients?sort=date'">Theo ngày đăng ký</a></li>
                                <li><a class="dropdown-item" t-att-href="'/patients?sort=name' + ('&amp;search=' + request.params.get('search')) if request.params.get('search') else '/patients?sort=name'">Theo tên</a></li>
                                <li><a class="dropdown-item" t-att-href="'/patients?sort=age' + ('&amp;search=' + request.params.get('search')) if request.params.get('search') else '/patients?sort=age'">Theo tuổi</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 o_patient_table">
                                <thead>
                                    <tr>
                                        <th scope="col">Mã</th>
                                        <th scope="col">Họ và tên</th>
                                        <th scope="col">Ngày đăng ký</th>
                                        <th scope="col">Giới tính</th>
                                        <th scope="col">Tuổi</th>
                                        <th scope="col">Điện thoại</th>
                                        <th scope="col">Loại</th>
                                        <th scope="col">Bảo hiểm</th>
                                        <th scope="col" class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="patients">
                                        <t t-foreach="patients" t-as="patient">
                                            <tr>
                                                <td><span class="fw-medium"><t t-esc="patient.code"/></span></td>
                                                <td><span class="fw-medium"><t t-esc="patient.name"/></span></td>
                                                <td><t t-esc="patient.date" t-options='{"widget": "datetime", "format": "dd/MM/yyyy"}'/></td>
                                                <td>
                                                    <t t-if="patient.gender == 'male'"><i class="fa fa-male text-primary"/> Nam</t>
                                                    <t t-elif="patient.gender == 'female'"><i class="fa fa-female text-danger"/> Nữ</t>
                                                    <t t-else=""><i class="fa fa-genderless text-muted"/> Khác</t>
                                                </td>
                                                <td><t t-esc="patient.age"/></td>
                                                <td>
                                                    <t t-if="patient.phone">
                                                        <a t-att-href="'tel:%s' % patient.phone" class="text-body">
                                                            <i class="fa fa-phone text-success me-1"/> <t t-esc="patient.phone"/>
                                                        </a>
                                                    </t>
                                                    <t t-else="">-</t>
                                                </td>
                                                <td>
                                                    <span t-if="patient.patient_type == 'outpatient'" class="badge badge-outpatient">Ngoại trú</span>
                                                    <span t-else="" class="badge badge-inpatient">Nội trú</span>
                                                </td>
                                                <td>
                                                    <t t-if="patient.has_insurance">
                                                        <span class="text-success"><i class="fa fa-check-circle"/> Có BHYT</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="text-muted"><i class="fa fa-times-circle"/> Không</span>
                                                    </t>
                                                </td>
                                                <td>
                                                    <div class="d-flex justify-content-center gap-2">
                                                        <a t-att-href="'/patients/%s' % patient.id" class="btn btn-sm btn-outline-primary">
                                                            <i class="fa fa-eye"/> Xem
                                                        </a>
                                                        <a t-att-href="'/patients/%s/edit' % patient.id" class="btn btn-sm btn-outline-secondary">
                                                            <i class="fa fa-edit"/> Sửa
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="9" class="text-center py-5">
                                                <div class="text-muted">
                                                    <i class="fa fa-search fa-3x mb-3 d-block"/>
                                                    <h4>Không tìm thấy bệnh nhân nào</h4>
                                                    <p>Thử thay đổi bộ lọc hoặc tạo bệnh nhân mới</p>
                                                    <a href="/patients/create" class="btn btn-primary mt-2">
                                                        <i class="fa fa-plus-circle"/> Thêm bệnh nhân mới
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <t t-if="pager">
                    <div class="o_patient_pagination">
                        <ul class="pagination">
                            <li t-attf-class="page-item #{pager['page'] == 1 and 'disabled' or ''}">
                                <a t-att-href="pager['page_previous']['url']" class="page-link">Previous</a>
                            </li>
                            <t t-foreach="pager['page_ids']" t-as="page">
                                <li t-attf-class="page-item #{page['num'] == pager['page'] and 'active' or ''}">
                                    <a t-att-href="page['url']" class="page-link"><t t-esc="page['num']"/></a>
                                </li>
                            </t>
                            <li t-attf-class="page-item #{pager['page'] == pager['page_count'] and 'disabled' or ''}">
                                <a t-att-href="pager['page_next']['url']" class="page-link">Next</a>
                            </li>
                        </ul>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>