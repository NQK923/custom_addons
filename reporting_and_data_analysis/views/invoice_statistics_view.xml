<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Invoice Statistics -->
    <record id="view_invoice_statistics_tree" model="ir.ui.view">
        <field name="name">invoice.statistics.tree</field>
        <field name="model">invoice.statistics</field>
        <field name="arch" type="xml">
            <list string="Thống kê hóa đơn" create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="display_name"/>
                <field name="patient_id"/>
                <field name="invoice_date"/>
                <field name="service_amount" sum="Total"/>
                <field name="medicine_amount" sum="Total"/>
                <field name="amount_total" sum="Total"/>
                <field name="insurance_amount" sum="Total"/>
                <field name="patient_amount" sum="Total"/>
                <field name="state"/>
                <field name="service_count" sum="Total"/>
                <field name="product_count" sum="Total"/>
                <field name="has_insurance"/>
                <field name="month" invisible="1"/>
                <field name="year" invisible="1"/>
                <field name="day" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Graph View for Invoice Statistics -->
    <record id="view_invoice_statistics_graph" model="ir.ui.view">
        <field name="name">invoice.statistics.graph</field>
        <field name="model">invoice.statistics</field>
        <field name="arch" type="xml">
            <graph string="Biểu đồ hóa đơn" type="bar" sample="1">
                <field name="invoice_date:month"/>
                <field name="amount_total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View for Invoice Statistics -->
    <record id="view_invoice_statistics_pivot" model="ir.ui.view">
        <field name="name">invoice.statistics.pivot</field>
        <field name="model">invoice.statistics</field>
        <field name="arch" type="xml">
            <pivot string="Thống kê chi tiết hóa đơn" sample="1">
                <field name="invoice_date:month" type="row"/>
                <field name="state" type="col"/>
                <field name="amount_total" type="measure"/>
                <field name="service_amount" type="measure"/>
                <field name="medicine_amount" type="measure"/>
                <field name="insurance_amount" type="measure"/>
                <field name="patient_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Search View for Invoice Statistics -->
    <record id="view_invoice_statistics_search" model="ir.ui.view">
        <field name="name">invoice.statistics.search</field>
        <field name="model">invoice.statistics</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm thống kê">
                <field name="name"/>
                <field name="display_name"/>
                <field name="patient_id"/>
                <field name="invoice_date"/>
                <field name="state"/>
                <filter string="Ngày hiện tại" name="today" date="invoice_date" domain="[]"/>
                <filter string="Tuần này" name="this_week" date="invoice_date" domain="[]"/>
                <filter string="Tháng này" name="this_month" date="invoice_date" domain="[]"/>
                <filter string="Quý này" name="this_quarter" date="invoice_date" domain="[]"/>
                <filter string="Năm nay" name="this_year" date="invoice_date" domain="[]"/>
                <separator/>
                <filter string="Có bảo hiểm" name="has_insurance" domain="[('has_insurance','=',True)]"/>
                <filter string="Đã thanh toán" name="state_paid" domain="[('state','=','paid')]"/>
                <filter string="Đã xác nhận" name="state_confirmed" domain="[('state','=','confirmed')]"/>
                <filter string="Nháp" name="state_draft" domain="[('state','=','draft')]"/>
                <filter string="Đã hủy" name="state_cancelled" domain="[('state','=','cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Bệnh nhân" name="group_patient" context="{'group_by':'patient_id'}"/>
                    <filter string="Trạng thái" name="group_state" context="{'group_by':'state'}"/>
                    <filter string="Ngày" name="group_day" context="{'group_by':'invoice_date:day'}"/>
                    <filter string="Tháng" name="group_month" context="{'group_by':'invoice_date:month'}"/>
                    <filter string="Quý" name="group_quarter" context="{'group_by':'invoice_date:quarter'}"/>
                    <filter string="Năm" name="group_year" context="{'group_by':'invoice_date:year'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Invoice Statistics -->
    <record id="action_invoice_statistics" model="ir.actions.act_window">
        <field name="name">Thống kê hóa đơn</field>
        <field name="res_model">invoice.statistics</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="search_view_id" ref="view_invoice_statistics_search"/>
        <field name="context">{'search_default_this_month': 1, 'search_default_state_paid': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có dữ liệu thống kê hóa đơn
            </p>
        </field>
    </record>
</odoo>