<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View cho Báo cáo y tế với menu biểu đồ - Cải thiện UI -->
    <record id="view_hospital_medical_report_form" model="ir.ui.view">
        <field name="name">hospital.medical.report.form</field>
        <field name="model">hospital.medical.report</field>
        <field name="arch" type="xml">
            <form string="Báo cáo y tế">
                <header>
                    <button name="generate_report" string="Tạo báo cáo" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="generate_report" string="Cập nhật báo cáo" type="object" invisible="state == 'draft'"/>
                    <button string="Xác nhận báo cáo" type="object" name="action_approve" invisible="state != 'generated'" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Tên báo cáo"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="report_type" widget="selection"/>
                        </group>
                        <group>
                            <field name="department_id"/>
                            <field name="staff_id"/>
                        </group>
                    </group>

                    <!-- Menu navigation for biểu đồ - Cải thiện layout -->
                    <notebook invisible="state == 'draft'">
                        <page string="Nội dung báo cáo">
                            <field name="report_data" widget="html"/>
                        </page>
                        <page string="Biểu đồ chính" invisible="chart_image == False">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h3>Biểu đồ chính</h3>
                                    <field name="chart_image" widget="image" options="{'size': [800, 600]}" filename="chart_filename"/>
                                    <field name="chart_filename" invisible="1"/>
                                </div>
                            </div>
                        </page>
                        <page string="Biểu đồ bổ sung 1" invisible="additional_chart1 == False">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h3>Biểu đồ bổ sung 1</h3>
                                    <field name="additional_chart1" widget="image" options="{'size': [800, 600]}" filename="additional_chart1_filename"/>
                                    <field name="additional_chart1_filename" invisible="1"/>
                                </div>
                            </div>
                        </page>
                        <page string="Biểu đồ bổ sung 2" invisible="additional_chart2 == False">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h3>Biểu đồ bổ sung 2</h3>
                                    <field name="additional_chart2" widget="image" options="{'size': [800, 600]}" filename="additional_chart2_filename"/>
                                    <field name="additional_chart2_filename" invisible="1"/>
                                </div>
                            </div>
                        </page>
                        <page string="Ghi chú và kết luận">
                            <field name="conclusion" placeholder="Nhập kết luận và đề xuất của báo cáo..."/>
                        </page>
                    </notebook>

                    <!-- Only show this for draft state - Cải thiện thông báo -->
                    <group invisible="state != 'draft'">
                        <div class="alert alert-info text-center" role="alert">
                            <i class="fa fa-info-circle fa-2x"></i>
                            <div class="mt-2">
                                <h4>Chưa có dữ liệu báo cáo</h4>
                                <p>Vui lòng nhấn "Tạo báo cáo" để tạo nội dung và biểu đồ cho báo cáo này.</p>
                            </div>
                        </div>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View cho Báo cáo y tế - Cải thiện hiển thị danh sách -->
    <record id="view_hospital_medical_report_tree" model="ir.ui.view">
        <field name="name">hospital.medical.report.tree</field>
        <field name="model">hospital.medical.report</field>
        <field name="arch" type="xml">
            <list string="Báo cáo y tế" decoration-info="state=='draft'" decoration-success="state=='approved'" decoration-warning="state=='generated'">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="department_id"/>
                <field name="staff_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Kanban View cho Báo cáo y tế - Thêm mới -->
    <record id="view_hospital_medical_report_kanban" model="ir.ui.view">
        <field name="name">hospital.medical.report.kanban</field>
        <field name="model">hospital.medical.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="department_id"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb-0">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <span t-attf-class="badge badge-pill #{
                                    record.state.raw_value == 'draft' ? 'badge-info' :
                                    record.state.raw_value == 'generated' ? 'badge-warning' :
                                    'badge-success'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div><strong>Khoa/Phòng:</strong> <field name="department_id"/></div>
                                <div><strong>Loại báo cáo:</strong> <field name="report_type"/></div>
                                <div><strong>Khoảng thời gian:</strong> <field name="date_from"/> - <field name="date_to"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View cho Báo cáo y tế - Thêm mới -->
    <record id="view_hospital_medical_report_calendar" model="ir.ui.view">
        <field name="name">hospital.medical.report.calendar</field>
        <field name="model">hospital.medical.report</field>
        <field name="arch" type="xml">
            <calendar string="Báo cáo y tế" date_start="date_from" date_stop="date_to" color="department_id" quick_create="false">
                <field name="name"/>
                <field name="department_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Search View cho Báo cáo y tế - Cải thiện bộ lọc -->
    <record id="view_hospital_medical_report_search" model="ir.ui.view">
        <field name="name">hospital.medical.report.search</field>
        <field name="model">hospital.medical.report</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm báo cáo y tế">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="report_type"/>
                <field name="department_id"/>
                <field name="staff_id"/>
                <filter string="Báo cáo của tôi" domain="[('staff_id','=',uid)]" name="my_reports"/>
                <filter string="Báo cáo ngày hôm nay" domain="[('created_date','=',context_today())]" name="today_reports"/>
                <separator/>
                <filter string="Báo cáo chưa tạo" domain="[('state','=','draft')]" name="draft_reports"/>
                <filter string="Báo cáo đã tạo" domain="[('state','=','generated')]" name="generated_reports"/>
                <filter string="Báo cáo đã duyệt" domain="[('state','=','approved')]" name="approved_reports"/>
                <group expand="0" string="Group By">
                    <filter string="Loại báo cáo" name="group_by_type" domain="[]" context="{'group_by':'report_type'}"/>
                    <filter string="Khoa/Phòng" name="group_by_department" domain="[]" context="{'group_by':'department_id'}"/>
                    <filter string="Trạng thái" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View cho Wizard tạo báo cáo - Cải thiện UI -->
    <record id="view_hospital_medical_report_wizard_form" model="ir.ui.view">
        <field name="name">hospital.medical.report.wizard.form</field>
        <field name="model">hospital.medical.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo báo cáo y tế">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="report_type" widget="selection"/>
                        <field name="department_id" widget="selection"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-info-circle"></i> Hệ thống sẽ tự động phân tích dữ liệu trong khoảng thời gian bạn chọn và tạo báo cáo phù hợp.
                </div>
                <footer>
                    <button name="create_report" string="Tạo báo cáo" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action cho Báo cáo y tế - Cập nhật view_mode -->
    <record id="action_hospital_medical_report" model="ir.actions.act_window">
        <field name="name">Báo cáo y tế</field>
        <field name="res_model">hospital.medical.report</field>
        <field name="view_mode">kanban,list,form,calendar</field>
        <field name="search_view_id" ref="view_hospital_medical_report_search"/>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo báo cáo y tế đầu tiên
            </p>
            <p>
                Bạn có thể tạo báo cáo y tế mới để phân tích dữ liệu phòng khám.
                Các báo cáo có thể được xuất để chia sẻ hoặc lưu trữ.
            </p>
        </field>
    </record>

    <!-- Action cho Wizard tạo báo cáo -->
    <record id="action_hospital_medical_report_wizard" model="ir.actions.act_window">
        <field name="name">Tạo báo cáo mới</field>
        <field name="res_model">hospital.medical.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>