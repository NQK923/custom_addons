<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inspections List Template -->
    <template id="inspections_template" name="Inspections List">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col-12">
                        <h1>Danh sách kiểm tra y tế</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/certification/dashboard">Trang chủ</a></li>
                                <li class="breadcrumb-item active">Kiểm tra</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- Search and Filters -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <form class="form-inline" action="/certification/inspections" method="get">
                            <div class="input-group mb-2 mr-sm-2">
                                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm..." t-att-value="search or ''"/>
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <select name="state" class="form-control mb-2 mr-sm-2">
                                <option value="">Tất cả trạng thái</option>
                                <option t-att-selected="filter_state == 'planned'" value="planned">Lên kế hoạch</option>
                                <option t-att-selected="filter_state == 'in_progress'" value="in_progress">Đang thực hiện</option>
                                <option t-att-selected="filter_state == 'completed'" value="completed">Đã hoàn thành</option>
                                <option t-att-selected="filter_state == 'canceled'" value="canceled">Hủy bỏ</option>
                            </select>
                            <select name="result" class="form-control mb-2 mr-sm-2">
                                <option value="">Tất cả kết quả</option>
                                <option t-att-selected="filter_result == 'pending'" value="pending">Đang chờ</option>
                                <option t-att-selected="filter_result == 'passed'" value="passed">Đạt</option>
                                <option t-att-selected="filter_result == 'failed'" value="failed">Không đạt</option>
                                <option t-att-selected="filter_result == 'conditional'" value="conditional">Đạt có điều kiện</option>
                            </select>
                            <button type="submit" class="btn btn-primary mb-2">Lọc</button>
                            <a href="/certification/inspections" class="btn btn-secondary mb-2 ml-2">Đặt lại</a>
                        </form>
                    </div>
                    <div class="col-md-4 text-right">
                        <a href="/certification/inspection/create" class="btn btn-success">
                            <i class="fa fa-plus mr-1"></i> Tạo kiểm tra mới
                        </a>
                    </div>
                </div>

                <!-- Inspections Table -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <t t-if="inspections">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Ngày</th>
                                                    <th>Tên</th>
                                                    <th>Chứng nhận</th>
                                                    <th>Người kiểm tra</th>
                                                    <th>Kết quả</th>
                                                    <th>Trạng thái</th>
                                                    <th>Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="inspections" t-as="inspection">
                                                    <tr t-attf-class="#{inspection.result == 'failed' and 'table-danger' or inspection.result == 'conditional' and 'table-warning' or ''}">
                                                        <td><t t-esc="inspection.date or inspection.planned_date"/></td>
                                                        <td><t t-esc="inspection.name"/></td>
                                                        <td>
                                                            <a t-if="inspection.certification_id" t-att-href="'/certification/certificate/%s' % inspection.certification_id.id">
                                                                <t t-esc="inspection.certification_id.name"/>
                                                            </a>
                                                            <span t-else="">-</span>
                                                        </td>
                                                        <td><t t-esc="inspection.inspector"/></td>
                                                        <td>
                                                            <span t-attf-class="badge badge-#{inspection.result == 'passed' and 'success' or inspection.result == 'failed' and 'danger' or inspection.result == 'conditional' and 'warning' or 'secondary'}">
                                                                <t t-if="inspection.result == 'passed'">Đạt</t>
                                                                <t t-elif="inspection.result == 'failed'">Không đạt</t>
                                                                <t t-elif="inspection.result == 'conditional'">Đạt có điều kiện</t>
                                                                <t t-else="">Đang chờ</t>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <span t-attf-class="badge badge-#{inspection.state == 'completed' and 'success' or inspection.state == 'in_progress' and 'primary' or inspection.state == 'canceled' and 'danger' or 'secondary'}">
                                                                <t t-if="inspection.state == 'planned'">Lên kế hoạch</t>
                                                                <t t-elif="inspection.state == 'in_progress'">Đang thực hiện</t>
                                                                <t t-elif="inspection.state == 'completed'">Đã hoàn thành</t>
                                                                <t t-elif="inspection.state == 'canceled'">Hủy bỏ</t>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <a t-att-href="'/certification/inspection/%s' % inspection.id" class="btn btn-sm btn-primary">Chi tiết</a>
                                                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                    <span class="sr-only">Toggle Dropdown</span>
                                                                </button>
                                                                <div class="dropdown-menu">
                                                                    <a t-att-href="'/certification/inspection/%s/edit' % inspection.id" class="dropdown-item">Chỉnh sửa</a>
                                                                    <t t-if="inspection.state == 'planned'">
                                                                        <a t-att-href="'/certification/inspection/%s/start' % inspection.id" class="dropdown-item">Bắt đầu</a>
                                                                    </t>
                                                                    <t t-if="inspection.state == 'in_progress'">
                                                                        <a t-att-href="'/certification/inspection/%s/complete' % inspection.id" class="dropdown-item">Hoàn thành</a>
                                                                    </t>
                                                                    <t t-if="inspection.state not in ['completed', 'canceled']">
                                                                        <a t-att-href="'/certification/inspection/%s/cancel' % inspection.id" class="dropdown-item">Hủy bỏ</a>
                                                                    </t>
                                                                    <t t-if="inspection.state != 'planned'">
                                                                        <a t-att-href="'/certification/inspection/%s/reset' % inspection.id" class="dropdown-item">Đặt lại</a>
                                                                    </t>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="alert alert-info">
                                        <p class="mb-0">Không tìm thấy kiểm tra nào. <a href="/certification/inspection/create">Tạo kiểm tra mới</a>?</p>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Inspection Detail Template -->
    <template id="inspection_detail_template" name="Inspection Detail">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col-12">
                        <h1><t t-esc="inspection.name"/></h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/certification/dashboard">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="/certification/inspections">Kiểm tra</a></li>
                                <li class="breadcrumb-item active"><t t-esc="inspection.name"/></li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- Status and Actions -->
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div>
                            <span t-attf-class="badge badge-#{inspection.state == 'completed' and 'success' or inspection.state == 'in_progress' and 'primary' or inspection.state == 'canceled' and 'danger' or 'secondary'} p-2 mr-2">
                                <t t-if="inspection.state == 'planned'">Lên kế hoạch</t>
                                <t t-elif="inspection.state == 'in_progress'">Đang thực hiện</t>
                                <t t-elif="inspection.state == 'completed'">Đã hoàn thành</t>
                                <t t-elif="inspection.state == 'canceled'">Hủy bỏ</t>
                            </span>
                            <span t-attf-class="badge badge-#{inspection.result == 'passed' and 'success' or inspection.result == 'failed' and 'danger' or inspection.result == 'conditional' and 'warning' or 'secondary'} p-2">
                                <t t-if="inspection.result == 'passed'">Đạt</t>
                                <t t-elif="inspection.result == 'failed'">Không đạt</t>
                                <t t-elif="inspection.result == 'conditional'">Đạt có điều kiện</t>
                                <t t-else="">Đang chờ</t>
                            </span>
                        </div>

                        <t t-if="inspection.certification_id">
                            <p class="mt-2">
                                <strong>Chứng nhận liên quan:</strong>
                                <a t-att-href="'/certification/certificate/%s' % inspection.certification_id.id">
                                    <t t-esc="inspection.certification_id.name"/> (<t t-esc="inspection.certification_id.number"/>)
                                </a>
                            </p>
                        </t>
                    </div>
                    <div class="col-md-4 text-right">
                        <div class="btn-group">
                            <a t-att-href="'/certification/inspection/%s/edit' % inspection.id" class="btn btn-primary">
                                <i class="fa fa-edit mr-1"></i> Chỉnh sửa
                            </a>
                            <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <t t-if="inspection.state == 'planned'">
                                    <a t-att-href="'/certification/inspection/%s/start' % inspection.id" class="dropdown-item">Bắt đầu</a>
                                </t>
                                <t t-if="inspection.state == 'in_progress'">
                                    <a t-att-href="'/certification/inspection/%s/complete' % inspection.id" class="dropdown-item">Hoàn thành</a>
                                </t>
                                <t t-if="inspection.state not in ['completed', 'canceled']">
                                    <a t-att-href="'/certification/inspection/%s/cancel' % inspection.id" class="dropdown-item">Hủy bỏ</a>
                                </t>
                                <t t-if="inspection.state != 'planned'">
                                    <a t-att-href="'/certification/inspection/%s/reset' % inspection.id" class="dropdown-item">Đặt lại</a>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Inspection Details -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h4>Thông tin chung</h4>
                            </div>
                            <div class="card-body">
                                <dl class="row">
                                    <dt class="col-sm-4">Người kiểm tra</dt>
                                    <dd class="col-sm-8"><t t-esc="inspection.inspector or '-'"/></dd>

                                    <dt class="col-sm-4">Ngày dự kiến</dt>
                                    <dd class="col-sm-8"><t t-esc="inspection.planned_date or '-'"/></dd>

                                    <dt class="col-sm-4">Ngày thực tế</dt>
                                    <dd class="col-sm-8"><t t-esc="inspection.date or '-'"/></dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div t-if="inspection.corrective_action_required" class="card">
                            <div class="card-header bg-warning text-white">
                                <h4>Hành động khắc phục</h4>
                            </div>
                            <div class="card-body">
                                <p t-if="inspection.corrective_action"><t t-esc="inspection.corrective_action"/></p>
                                <p t-else="" class="text-muted">Cần khắc phục nhưng chưa có thông tin chi tiết.</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Kết quả kiểm tra</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h5>Phát hiện</h5>
                                        <p t-if="inspection.findings"><t t-esc="inspection.findings"/></p>
                                        <p t-else="" class="text-muted">Không có phát hiện nào.</p>
                                    </div>
                                    <div class="col-md-6">
                                        <h5>Khuyến nghị</h5>
                                        <p t-if="inspection.recommendations"><t t-esc="inspection.recommendations"/></p>
                                        <p t-else="" class="text-muted">Không có khuyến nghị nào.</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Ghi chú</h4>
                            </div>
                            <div class="card-body">
                                <p t-if="inspection.notes"><t t-esc="inspection.notes"/></p>
                                <p t-else="" class="text-muted">Không có ghi chú nào.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>