<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="staff_list_template" name="Staff List">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <h1 class="text-center mb-4">Quản lý nhân sự y tế</h1>

                <!-- Tab menu -->
                <t t-call="staff_management.clinic_tab_menu">
                    <t t-set="active_tab" t-value="active_tab"/>
                </t>

                <!-- Notification messages -->
                <t t-if="error">
                    <div class="alert alert-danger" role="alert">
                        <i class="fa fa-exclamation-triangle"/> <t t-esc="error"/>
                    </div>
                </t>
                <t t-if="success">
                    <div class="alert alert-success" role="alert">
                        <i class="fa fa-check-circle"/> <t t-esc="success"/>
                    </div>
                </t>

                <!-- Search form -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Tìm kiếm nhân sự</h4>
                    </div>
                    <div class="card-body">
                        <form method="GET" action="/clinic/staff">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="search_name">Tên nhân viên:</label>
                                    <input type="text" class="form-control" id="search_name" name="search_name"
                                           t-att-value="search_name or ''" placeholder="Nhập tên nhân viên..."/>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="search_department">Khoa:</label>
                                    <input type="text" class="form-control" id="search_department" name="search_department"
                                           t-att-value="search_department or ''" placeholder="Nhập tên khoa..."/>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="search_status">Trạng thái:</label>
                                    <select class="form-control" id="search_status" name="search_status">
                                        <option value="">-- Tất cả --</option>
                                        <option value="active" t-att-selected="search_status == 'active'">Đang làm việc</option>
                                        <option value="inactive" t-att-selected="search_status == 'inactive'">Nghỉ phép</option>
                                        <option value="retired" t-att-selected="search_status == 'retired'">Đã nghỉ hưu</option>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary px-4">Tìm kiếm</button>
                                <a href="/clinic/staff" class="btn btn-secondary ml-2">Xóa bộ lọc</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Staff list -->
                <div class="card">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Danh sách nhân sự</h4>
                        <div>
                            <a href="/clinic/staff/create" class="btn btn-light">
                                <i class="fa fa-plus-circle"/> Thêm nhân viên mới
                            </a>
                            <span class="badge badge-light ml-2">Tổng số: <t t-esc="len(staff_members)"/></span>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Họ và tên</th>
                                        <th>Chức vụ</th>
                                        <th>Khoa</th>
                                        <th>Liên hệ</th>
                                        <th>Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="staff_members">
                                        <t t-foreach="staff_members" t-as="staff">
                                            <tr>
                                                <td>
                                                    <a t-att-href="'/clinic/staff/%s' % staff.id" class="font-weight-bold">
                                                        <t t-esc="staff.staff_name"/>
                                                    </a>
                                                </td>
                                                <td>
                                                    <t t-if="staff.staff_type">
                                                        <t t-esc="staff.staff_type.position"/>
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="staff.department_id">
                                                        <t t-esc="staff.department_id.department_name"/>
                                                    </t>
                                                </td>
                                                <td><t t-esc="staff.contact_info"/></td>
                                                <td>
                                                    <span t-if="staff.status == 'active'" class="badge badge-success">Đang làm việc</span>
                                                    <span t-elif="staff.status == 'inactive'" class="badge badge-warning">Nghỉ phép</span>
                                                    <span t-elif="staff.status == 'retired'" class="badge badge-secondary">Đã nghỉ hưu</span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group">
                                                        <a t-att-href="'/clinic/staff/%s' % staff.id" class="btn btn-sm btn-info"
                                                           title="Chi tiết">
                                                            <i class="fa fa-eye"/> Chi tiết
                                                        </a>
                                                        <a t-att-href="'/clinic/staff/%s/edit' % staff.id" class="btn btn-sm btn-primary ml-1"
                                                           title="Chỉnh sửa">
                                                            <i class="fa fa-edit"/> Sửa
                                                        </a>
                                                        <div class="dropdown d-inline-block ml-1">
                                                            <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                                <i class="fa fa-cog"/> Thao tác
                                                            </button>
                                                            <div class="dropdown-menu">
                                                                <a t-att-href="'/clinic/staff/attendance/%s' % staff.id" class="dropdown-item"
                                                                   title="Chấm công">
                                                                    <i class="fa fa-clock-o"/> Chấm công
                                                                </a>
                                                                <a t-att-href="'/clinic/staff/performance/%s' % staff.id" class="dropdown-item"
                                                                   title="Đánh giá hiệu suất">
                                                                    <i class="fa fa-star"/> Đánh giá
                                                                </a>
                                                                <div class="dropdown-divider"></div>
                                                                <a t-att-href="'/clinic/staff/%s/delete' % staff.id" class="dropdown-item text-danger"
                                                                   title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này?');">
                                                                    <i class="fa fa-trash"/> Xóa
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="6" class="text-center py-4">
                                                <div class="alert alert-info mb-0">
                                                    <i class="fa fa-info-circle"/> Không tìm thấy nhân viên nào phù hợp với điều kiện tìm kiếm.
                                                    <a href="/clinic/staff/create" class="btn btn-primary btn-sm ml-3">
                                                        <i class="fa fa-plus-circle"/> Thêm nhân viên mới
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>