<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="staff_form_template" name="Staff Form">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/clinic/staff">Danh sách nhân sự</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <t t-if="mode == 'create'">Thêm nhân viên mới</t>
                            <t t-else="">Chỉnh sửa nhân viên</t>
                        </li>
                    </ol>
                </nav>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <t t-if="mode == 'create'">Thêm nhân viên mới</t>
                            <t t-else="">Chỉnh sửa nhân viên: <t t-esc="staff.staff_name"/></t>
                        </h4>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/clinic/staff/save">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="mode" t-att-value="mode"/>
                            <t t-if="mode == 'edit'">
                                <input type="hidden" name="staff_id" t-att-value="staff.id"/>
                            </t>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="staff_name">Họ và tên <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="staff_name" name="staff_name" required="required"
                                               t-att-value="staff.staff_name if staff else ''"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="date_of_birth">Ngày sinh</label>
                                        <input type="date" class="form-control" id="date_of_birth" name="date_of_birth"
                                               t-att-value="staff.date_of_birth if staff else ''"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="gender">Giới tính <span class="text-danger">*</span></label>
                                        <select class="form-control" id="gender" name="gender" required="required">
                                            <option value="">-- Chọn giới tính --</option>
                                            <option value="male" t-att-selected="staff and staff.gender == 'male'">Nam</option>
                                            <option value="female" t-att-selected="staff and staff.gender == 'female'">Nữ</option>
                                            <option value="other" t-att-selected="staff and staff.gender == 'other'">Khác</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="contact_info">Thông tin liên lạc</label>
                                        <input type="text" class="form-control" id="contact_info" name="contact_info"
                                               t-att-value="staff.contact_info if staff else ''"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="address">Địa chỉ</label>
                                        <textarea class="form-control" id="address" name="address" rows="3"><t t-esc="staff.address if staff else ''"/></textarea>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="staff_type">Chức vụ</label>
                                        <select class="form-control" id="staff_type" name="staff_type">
                                            <option value="">-- Chọn chức vụ --</option>
                                            <t t-foreach="staff_types" t-as="staff_type">
                                                <option t-att-value="staff_type.id" t-att-selected="staff and staff.staff_type and staff.staff_type.id == staff_type.id">
                                                    <t t-esc="staff_type.position"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="department_id">Khoa</label>
                                        <select class="form-control" id="department_id" name="department_id">
                                            <option value="">-- Chọn khoa --</option>
                                            <t t-foreach="departments" t-as="department">
                                                <option t-att-value="department.id" t-att-selected="staff and staff.department_id and staff.department_id.id == department.id">
                                                    <t t-esc="department.department_name"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="license_number">Số giấy phép hành nghề</label>
                                        <input type="text" class="form-control" id="license_number" name="license_number"
                                               t-att-value="staff.license_number if staff else ''"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="qualification">Trình độ chuyên môn</label>
                                        <input type="text" class="form-control" id="qualification" name="qualification"
                                               t-att-value="staff.qualification if staff else ''"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="experience_year">Số năm kinh nghiệm</label>
                                        <input type="number" class="form-control" id="experience_year" name="experience_year" min="0"
                                               t-att-value="staff.experience_year if staff else '0'"/>
                                    </div>

                                    <div class="form-group">
                                        <label for="labor_type">Loại lao động</label>
                                        <select class="form-control" id="labor_type" name="labor_type">
                                            <option value="full_time" t-att-selected="not staff or staff.labor_type == 'full_time'">Toàn thời gian</option>
                                            <option value="part_time" t-att-selected="staff and staff.labor_type == 'part_time'">Bán thời gian</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="status">Trạng thái</label>
                                        <select class="form-control" id="status" name="status">
                                            <option value="active" t-att-selected="not staff or staff.status == 'active'">Đang làm việc</option>
                                            <option value="inactive" t-att-selected="staff and staff.status == 'inactive'">Nghỉ phép</option>
                                            <option value="retired" t-att-selected="staff and staff.status == 'retired'">Đã nghỉ hưu</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="fa fa-save"/> Lưu
                                </button>
                                <a href="/clinic/staff" class="btn btn-secondary ml-2">
                                    <i class="fa fa-times"/> Hủy
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>