<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Common CSS for all invoice management pages -->
    <template id="invoice_management_assets" name="Invoice Management Assets">
        <style>
            /* Common Styles */
            .im-container {
                background-color: #f8f9fa;
                padding: 30px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                max-width: 1200px;
                margin: 0 auto;
            }
            .im-card {
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                margin-bottom: 25px;
                border: 1px solid #dee2e6;
            }
            .im-card h3 {
                color: #007bff;
                border-bottom: 2px solid #007bff;
                padding-bottom: 8px;
                margin-bottom: 20px;
                font-size: 1.5rem;
            }
            .im-table {
                margin-bottom: 25px;
                font-size: 0.95rem;
            }
            .im-table th {
                background-color: #007bff;
                color: #fff;
                padding: 12px;
                text-align: center;
            }
            .im-table td {
                vertical-align: middle;
                padding: 10px;
            }
            .im-empty {
                color: #6c757d;
                font-style: italic;
                font-size: 1rem;
                text-align: center;
                padding: 20px;
            }
            .im-filter-form {
                margin-bottom: 20px;
            }
            .im-status-draft {
                background-color: #ffc107;
                color: #212529;
                padding: 3px 8px;
                border-radius: 4px;
                font-size: 0.85rem;
                font-weight: bold;
            }
            .im-status-confirmed {
                background-color: #17a2b8;
                color: #fff;
                padding: 3px 8px;
                border-radius: 4px;
                font-size: 0.85rem;
                font-weight: bold;
            }
            .im-status-paid {
                background-color: #28a745;
                color: #fff;
                padding: 3px 8px;
                border-radius: 4px;
                font-size: 0.85rem;
                font-weight: bold;
            }
            .im-status-cancelled {
                background-color: #dc3545;
                color: #fff;
                padding: 3px 8px;
                border-radius: 4px;
                font-size: 0.85rem;
                font-weight: bold;
            }
            .im-price {
                font-weight: bold;
                text-align: right;
            }
            .im-actions {
                margin-bottom: 20px;
            }
        </style>
    </template>

    <!-- Navigation menu for invoice management -->
    <template id="invoice_management_menu" name="Invoice Management Menu">
        <div class="im-menu mb-4">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a t-attf-class="nav-link #{page_name == 'invoice_list' and 'active' or ''}" href="/invoice/list">Hóa đơn</a>
                </li>
                <li class="nav-item">
                    <a t-attf-class="nav-link #{page_name == 'insurance_list' and 'active' or ''}" href="/insurance/list">Hóa đơn bảo hiểm</a>
                </li>
                <li class="nav-item">
                    <a t-attf-class="nav-link #{page_name == 'purchase_list' and 'active' or ''}" href="/purchase/list">Phiếu nhập hàng</a>
                </li>
                <li class="nav-item">
                    <a t-attf-class="nav-link #{page_name == 'statistics_dashboard' and 'active' or ''}" href="/statistics/dashboard">Thống kê</a>
                </li>
            </ul>
        </div>
    </template>

    <!-- Main layout for invoice management pages -->
    <template id="invoice_management_layout" name="Invoice Management Layout">
        <t t-call="website.layout">
            <t t-call="invoice_management.invoice_management_assets"/>
            <div class="container mt-5 im-container">
                <h1 class="text-center mb-5">
                    <t t-esc="page_title or 'Quản lý hóa đơn phòng khám'"/>
                </h1>
                <t t-call="invoice_management.invoice_management_menu"/>
                <t t-raw="0"/>
            </div>
        </t>
    </template>
</odoo>