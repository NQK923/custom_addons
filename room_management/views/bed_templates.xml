<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template tạo giường mới -->
    <template id="bed_create_template" name="Tạo giường bệnh mới">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row mb-3">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/clinic/rooms?active_tab=beds">Danh sách giường bệnh</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Tạo giường mới</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- Thông báo lỗi -->
                <t t-if="error_message">
                    <div class="alert alert-danger" role="alert">
                        <t t-esc="error_message"/>
                    </div>
                </t>

                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0">Tạo giường bệnh mới</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="form-group">
                                <label for="room_id">Phòng <span class="text-danger">*</span></label>
                                <select class="form-control" id="room_id" name="room_id" required="required">
                                    <option value="">-- Chọn phòng --</option>
                                    <t t-foreach="rooms" t-as="room">
                                        <option t-att-value="room.id" t-att-selected="default_values.get('room_id') == str(room.id)">
                                            <t t-esc="room.name"/>
                                        </option>
                                    </t>
                                </select>
                                <small class="form-text text-muted">Giường sẽ được tạo trong phòng đã chọn</small>
                            </div>

                            <div class="form-group text-right">
                                <a href="/clinic/rooms?active_tab=beds" class="btn btn-secondary">Hủy</a>
                                <button type="submit" class="btn btn-primary">Tạo giường</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template chi tiết giường bệnh -->
    <template id="bed_detail_template" name="Chi tiết Giường bệnh">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row mb-3">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/clinic/rooms?active_tab=beds">Danh sách giường bệnh</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Chi tiết giường</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- Thông báo -->
                <t t-if="request.params.get('success') == 'assigned'">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Phân bệnh nhân vào giường thành công!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&amp;times;</span>
                        </button>
                    </div>
                </t>
                <t t-if="request.params.get('success') == 'discharged'">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Xuất viện bệnh nhân <t t-esc="request.params.get('patient_name', '')"/> thành công!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&amp;times;</span>
                        </button>
                    </div>
                </t>
                <t t-if="request.params.get('error')">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <t t-esc="request.params.get('error')"/>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&amp;times;</span>
                        </button>
                    </div>
                </t>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="mb-0">Giường bệnh ID: <t t-esc="bed.id"/></h2>
                            <div>
                                <a t-att-href="'/clinic/bed/%s/edit' % bed.id" class="btn btn-info">
                                    <i class="fa fa-edit"/> Chỉnh sửa
                                </a>
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteBedModal">
                                    <i class="fa fa-trash"/> Xóa
                                </button>
                            </div>
                        </div>

                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h3 class="card-title mb-0">Thông tin giường bệnh</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>ID:</strong> <t t-esc="bed.id"/></p>
                                        <p><strong>Phòng:</strong> <t t-esc="bed.room_id.name"/></p>
                                        <p>
                                            <strong>Trạng thái:</strong>
                                            <span t-if="bed.status == 'available'" class="badge badge-success">Còn trống</span>
                                            <span t-else="" class="badge badge-warning">Có bệnh nhân</span>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <t t-if="bed.patient_id">
                                            <p><strong>Mã bệnh nhân:</strong> <t t-esc="bed.patient_id.code or '-'"/></p>
                                            <p><strong>Tên bệnh nhân:</strong> <t t-esc="bed.patient_name or '-'"/></p>
                                            <form method="POST" t-att-action="'/clinic/bed/%s/discharge' % bed.id">
                                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fa fa-sign-out"/> Xuất viện
                                                </button>
                                            </form>
                                        </t>
                                        <t t-else="">
                                            <p><strong>Mã bệnh nhân:</strong> -</p>
                                            <p><strong>Tên bệnh nhân:</strong> -</p>
                                            <button class="btn btn-success" data-toggle="modal" data-target="#assignPatientModal">
                                                <i class="fa fa-user-plus"/> Phân bệnh nhân
                                            </button>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal xác nhận xóa giường -->
            <div class="modal fade" id="deleteBedModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Xác nhận xóa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&amp;times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Bạn có chắc chắn muốn xóa giường bệnh ID <strong><t t-esc="bed.id"/></strong>?</p>
                            <p class="text-danger">Lưu ý: Không thể xóa giường đang có bệnh nhân.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            <form t-att-action="'/clinic/bed/%s/delete' % bed.id" method="POST">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <button type="submit" class="btn btn-danger">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal phân bệnh nhân -->
            <div class="modal fade" id="assignPatientModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Phân bệnh nhân vào giường</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&amp;times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form t-att-action="'/clinic/bed/%s/assign' % bed.id" method="POST" id="assignForm">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="form-group">
                                    <label for="patient_id">Chọn bệnh nhân:</label>
                                    <select class="form-control patient-select" name="patient_id" required="required">
                                        <option value="">-- Chọn bệnh nhân --</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                            <button type="submit" form="assignForm" class="btn btn-primary">Phân bệnh nhân</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template chỉnh sửa giường bệnh -->
    <template id="bed_edit_template" name="Chỉnh sửa Giường bệnh">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row mb-3">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/clinic/rooms?active_tab=beds">Danh sách giường bệnh</a></li>
                                <li class="breadcrumb-item"><a t-att-href="'/clinic/bed/%s' % bed.id">Chi tiết giường</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <!-- Thông báo lỗi -->
                <t t-if="error_message">
                    <div class="alert alert-danger" role="alert">
                        <t t-esc="error_message"/>
                    </div>
                </t>

                <div class="card shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h3 class="card-title mb-0">Chỉnh sửa giường bệnh ID: <t t-esc="bed.id"/></h3>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="form-group">
                                <label for="room_id">Phòng <span class="text-danger">*</span></label>
                                <select class="form-control" id="room_id" name="room_id" required="required">
                                    <t t-foreach="rooms" t-as="room">
                                        <option t-att-value="room.id" t-att-selected="bed.room_id.id == room.id">
                                            <t t-esc="room.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Trạng thái:</label>
                                <p>
                                    <span t-if="bed.status == 'available'" class="badge badge-success">Còn trống</span>
                                    <span t-else="" class="badge badge-warning">Có bệnh nhân</span>
                                    <small class="form-text text-muted">Trạng thái được tính toán tự động dựa trên việc có bệnh nhân hay không</small>
                                </p>
                            </div>

                            <t t-if="bed.patient_id">
                                <div class="form-group">
                                    <label>Bệnh nhân:</label>
                                    <p><t t-esc="bed.patient_id.code"/> - <t t-esc="bed.patient_name"/></p>
                                    <small class="form-text text-muted">Nếu muốn thay đổi bệnh nhân, hãy xuất viện bệnh nhân hiện tại trước</small>
                                </div>
                            </t>

                            <div class="form-group text-right">
                                <a t-att-href="'/clinic/bed/%s' % bed.id" class="btn btn-secondary">Hủy</a>
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>