<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for creating new treatment process -->
    <template id="treatment_process_form_template" name="Create Treatment Process">
        <t t-call="website.layout">
            <style>
                .form-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 800px;
                    margin: 0 auto;
                }
                .form-card {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .section-heading {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .plan-info p {
                    margin: 8px 0;
                    font-size: 1rem;
                    color: #343a40;
                }
                .plan-info strong {
                    color: #495057;
                    min-width: 150px;
                    display: inline-block;
                }
                .form-group {
                    margin-bottom: 20px;
                }
                .form-group label {
                    font-weight: 600;
                    color: #495057;
                    margin-bottom: 6px;
                }
                .form-control:focus {
                    border-color: #80bdff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                }
                .btn-primary {
                    background-color: #007bff;
                    border-color: #007bff;
                }
                .btn-primary:hover {
                    background-color: #0069d9;
                    border-color: #0062cc;
                }
                .btn-secondary {
                    background-color: #6c757d;
                    border-color: #6c757d;
                }
                .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }
                .required-field::after {
                    content: " *";
                    color: red;
                }
            </style>

            <div class="container mt-5 form-container">
                <h1 class="text-center mb-4">Thêm quá trình điều trị mới</h1>

                <!-- Plan Information -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin kế hoạch điều trị</h3>
                    <div class="row plan-info">
                        <div class="col-md-6">
                            <p><strong>Mã kế hoạch:</strong> <t t-esc="plan.code"/></p>
                            <p><strong>Bệnh nhân:</strong> <t t-esc="plan.patient_id.name"/> (<t t-esc="plan.patient_id.code"/>)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Ngày bắt đầu:</strong> <t t-esc="plan.start_date"/></p>
                            <p><strong>Ngày kết thúc:</strong> <t t-if="plan.end_date" t-esc="plan.end_date"/><t t-else="">Chưa kết thúc</t></p>
                        </div>
                    </div>
                </div>

                <!-- Treatment Process Form -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin quá trình điều trị</h3>
                    <form method="POST" action="/clinic/treatment_process/create">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="plan_id" t-att-value="plan.id"/>

                        <div class="form-group">
                            <label for="service_id" class="required-field">Loại dịch vụ</label>
                            <select class="form-control" id="service_id" name="service_id" required="required">
                                <option value="">-- Chọn dịch vụ --</option>
                                <t t-foreach="services" t-as="service">
                                    <option t-att-value="service.id">
                                        <t t-esc="service.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="executor_id" class="required-field">Người thực hiện</label>
                            <select class="form-control" id="executor_id" name="executor_id" required="required">
                                <option value="">-- Chọn người thực hiện --</option>
                                <t t-foreach="staff" t-as="person">
                                    <option t-att-value="person.id">
                                        <t t-esc="person.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="state" class="required-field">Trạng thái</label>
                            <select class="form-control" id="state" name="state" required="required">
                                <option value="pending" selected="selected">Chưa thực hiện</option>
                                <option value="in_progress">Đang thực hiện</option>
                                <option value="completed">Hoàn thành</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="execution_time">Thời gian thực hiện</label>
                            <input type="datetime-local" class="form-control" id="execution_time" name="execution_time"
                                   t-att-value="now"/>
                            <small class="text-muted">Để trống nếu chưa thực hiện</small>
                        </div>
                        <div class="form-group">
                            <label for="prescription_id">Đơn thuốc</label>
                            <select class="form-control" id="prescription_id" name="prescription_id">
                                <option value="">-- Chọn đơn thuốc (nếu có) --</option>
                                <t t-foreach="prescriptions" t-as="prescription">
                                    <option t-att-value="prescription.id">
                                        <t t-esc="prescription.name"/>
                                    </option>
                                </t>
                            </select>
                            <small class="text-muted">Để trống nếu không có đơn thuốc</small>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-save"></i> Lưu quá trình
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a t-att-href="'/clinic/treatment_plan_details/%s' % plan.id" class="btn btn-secondary w-100">
                                    <i class="fa fa-times"></i> Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <!-- Template for editing treatment process -->
    <template id="treatment_process_edit_template" name="Edit Treatment Process">
        <t t-call="website.layout">
            <style>
                .form-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 800px;
                    margin: 0 auto;
                }
                .form-card {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .section-heading {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .plan-info p {
                    margin: 8px 0;
                    font-size: 1rem;
                    color: #343a40;
                }
                .plan-info strong {
                    color: #495057;
                    min-width: 150px;
                    display: inline-block;
                }
                .form-group {
                    margin-bottom: 20px;
                }
                .form-group label {
                    font-weight: 600;
                    color: #495057;
                    margin-bottom: 6px;
                }
                .form-control:focus {
                    border-color: #80bdff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                }
                .btn-primary {
                    background-color: #007bff;
                    border-color: #007bff;
                }
                .btn-primary:hover {
                    background-color: #0069d9;
                    border-color: #0062cc;
                }
                .btn-secondary {
                    background-color: #6c757d;
                    border-color: #6c757d;
                }
                .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }
                .required-field::after {
                    content: " *";
                    color: red;
                }
            </style>

            <div class="container mt-5 form-container">
                <h1 class="text-center mb-4">Chỉnh sửa quá trình điều trị</h1>

                <!-- Plan Information -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin kế hoạch điều trị</h3>
                    <div class="row plan-info">
                        <div class="col-md-6">
                            <p><strong>Mã kế hoạch:</strong> <t t-esc="plan.code"/></p>
                            <p><strong>Bệnh nhân:</strong> <t t-esc="plan.patient_id.name"/> (<t t-esc="plan.patient_id.code"/>)</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Ngày bắt đầu:</strong> <t t-esc="plan.start_date"/></p>
                            <p><strong>Ngày kết thúc:</strong> <t t-if="plan.end_date" t-esc="plan.end_date"/><t t-else="">Chưa kết thúc</t></p>
                        </div>
                    </div>
                </div>

                <!-- Treatment Process Form -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin quá trình điều trị</h3>
                    <div class="mb-3">
                        <p><strong>Mã quá trình:</strong> <t t-esc="process.code"/></p>
                    </div>

                    <form t-att-action="'/clinic/treatment_process/edit/%s' % process.id" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="form-group">
                            <label for="service_id" class="required-field">Loại dịch vụ</label>
                            <select class="form-control" id="service_id" name="service_id" required="required">
                                <option value="">-- Chọn dịch vụ --</option>
                                <t t-foreach="services" t-as="service">
                                    <option t-att-value="service.id" t-att-selected="service.id == process.service_id.id">
                                        <t t-esc="service.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="executor_id" class="required-field">Người thực hiện</label>
                            <select class="form-control" id="executor_id" name="executor_id" required="required">
                                <option value="">-- Chọn người thực hiện --</option>
                                <t t-foreach="staff" t-as="person">
                                    <option t-att-value="person.id" t-att-selected="person.id == process.executor_id.id">
                                        <t t-esc="person.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="state" class="required-field">Trạng thái</label>
                            <select class="form-control" id="state" name="state" required="required">
                                <option value="pending" t-att-selected="process.state == 'pending'">Chưa thực hiện</option>
                                <option value="in_progress" t-att-selected="process.state == 'in_progress'">Đang thực hiện</option>
                                <option value="completed" t-att-selected="process.state == 'completed'">Hoàn thành</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="execution_time">Thời gian thực hiện</label>
                            <input type="datetime-local" class="form-control" id="execution_time" name="execution_time"
                                   t-att-value="process.execution_time and process.execution_time.strftime('%Y-%m-%dT%H:%M')"/>
                            <small class="text-muted">Để trống nếu chưa thực hiện</small>
                        </div>
                        <div class="form-group">
                        <label for="prescription_id">Đơn thuốc</label>
                        <select class="form-control" id="prescription_id" name="prescription_id">
                            <option value="">-- Chọn đơn thuốc (nếu có) --</option>
                            <t t-foreach="prescriptions" t-as="prescription">
                                <option t-att-value="prescription.id" t-att-selected="prescription.id == process.prescription_id.id">
                                    <t t-esc="prescription.name"/> <!-- Hoặc trường khác như code -->
                                </option>
                            </t>
                        </select>
                        <small class="text-muted">Để trống nếu không có đơn thuốc</small>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-save"></i> Lưu thay đổi
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a t-att-href="'/clinic/treatment_plan_details/%s' % plan.id" class="btn btn-secondary w-100">
                                    <i class="fa fa-times"></i> Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>