<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for creating new treatment plan -->
    <template id="treatment_plan_form_template" name="Create Treatment Plan">
        <t t-call="website.layout">
            <style>
                .form-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 800px;
                    margin: 0 auto;
                }
                .form-card {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .section-heading {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .patient-info p {
                    margin: 8px 0;
                    font-size: 1rem;
                    color: #343a40;
                }
                .patient-info strong {
                    color: #495057;
                    min-width: 150px;
                    display: inline-block;
                }
                .form-group {
                    margin-bottom: 20px;
                }
                .form-group label {
                    font-weight: 600;
                    color: #495057;
                    margin-bottom: 6px;
                }
                .form-control:focus {
                    border-color: #80bdff;
                    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                }
                .btn-primary {
                    background-color: #007bff;
                    border-color: #007bff;
                }
                .btn-primary:hover {
                    background-color: #0069d9;
                    border-color: #0062cc;
                }
                .btn-secondary {
                    background-color: #6c757d;
                    border-color: #6c757d;
                }
                .btn-secondary:hover {
                    background-color: #5a6268;
                    border-color: #545b62;
                }
                .required-field::after {
                    content: " *";
                    color: red;
                }
            </style>

            <div class="container mt-5 form-container">
                <h1 class="text-center mb-4">Tạo kế hoạch điều trị mới</h1>

                <!-- Patient Information -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin bệnh nhân</h3>
                    <div class="row patient-info">
                        <div class="col-md-6">
                            <p><strong>Mã bệnh nhân:</strong> <t t-esc="patient.code"/></p>
                            <p><strong>Họ và tên:</strong> <t t-esc="patient.name"/></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Giới tính:</strong>
                                <t t-if="patient.gender == 'male'">Nam</t>
                                <t t-elif="patient.gender == 'female'">Nữ</t>
                                <t t-else="">Khác</t>
                            </p>
                            <p><strong>Tuổi:</strong> <t t-esc="patient.age"/></p>
                        </div>
                    </div>
                </div>

                <!-- Treatment Plan Form -->
                <div class="form-card">
                    <h3 class="section-heading">Thông tin kế hoạch điều trị</h3>
                    <form method="POST" action="/clinic/treatment_plan/create">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="patient_id" t-att-value="patient.id"/>

                        <div class="form-group">
                            <label for="start_date" class="required-field">Ngày bắt đầu</label>
                            <input type="date" class="form-control" id="start_date" name="start_date"
                                   t-att-value="today" required="required"/>
                        </div>

                        <div class="form-group">
                            <label for="end_date">Ngày kết thúc</label>
                            <input type="date" class="form-control" id="end_date" name="end_date"/>
                            <small class="text-muted">Để trống nếu chưa xác định ngày kết thúc</small>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-save"></i> Lưu kế hoạch
                                </button>
                            </div>
                            <div class="col-md-6">
                                <a href="/clinic/treatment_plans" class="btn btn-secondary w-100">
                                    <i class="fa fa-times"></i> Hủy
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </t>
    </template>

