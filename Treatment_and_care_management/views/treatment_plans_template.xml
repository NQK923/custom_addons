<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Treatment Plans Template -->
    <template id="treatment_plans_template" name="Treatment Plans">
        <t t-call="website.layout">
            <style>
                .treatment-container {
                background-color: #f8f9fa;
                padding: 30px;
                border-radius: 10px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                max-width: 1200px;
                margin: 0 auto;
                }
                .patient-info, .treatment-list {
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                margin-bottom: 25px;
                border: 1px solid #dee2e6;
                }
                .section-heading {
                color: #007bff;
                border-bottom: 2px solid #007bff;
                padding-bottom: 8px;
                margin-bottom: 20px;
                font-size: 1.5rem;
                }
                .patient-data p {
                margin: 8px 0;
                font-size: 1rem;
                color: #343a40;
                }
                .patient-data strong {
                color: #495057;
                min-width: 150px;
                display: inline-block;
                }
                .search-form {
                max-width: 500px;
                margin: 0 auto 30px auto;
                }
                .search-form label {
                font-weight: 600;
                color: #495057;
                }
                .search-form .form-control {
                border-radius: 5px;
                box-shadow: none;
                }
                .search-form .btn-primary {
                width: 100%;
                border-radius: 5px;
                padding: 10px;
                }
                .table {
                margin-bottom: 0;
                }
                .table th {
                background-color: #007bff;
                color: #fff;
                padding: 12px;
                text-align: center;
                }
                .table td {
                vertical-align: middle;
                padding: 10px;
                text-align: center;
                }
                .no-data {
                color: #6c757d;
                font-style: italic;
                text-align: center;
                padding: 20px;
                }
                .action-btn {
                background-color: #17a2b8;
                color: white;
                border: none;
                border-radius: 4px;
                padding: 6px 12px;
                cursor: pointer;
                transition: background-color 0.3s;
                }
                .action-btn:hover {
                background-color: #138496;
                text-decoration: none;
                color: white;
                }
                /* New styles for the quick access section */
                .quick-access-section {
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                margin-bottom: 25px;
                border: 1px solid #dee2e6;
                text-align: center;
                }
                .quick-access-btn {
                display: inline-block;
                background-color: #28a745;
                color: white;
                border: none;
                border-radius: 4px;
                padding: 10px 20px;
                font-size: 1.1rem;
                margin: 10px;
                cursor: pointer;
                transition: background-color 0.3s;
                text-decoration: none;
                }
                .quick-access-btn:hover {
                background-color: #218838;
                color: white;
                text-decoration: none;
                }
                /* Modal styles */
                .modal-content {
                border-radius: 8px;
                }
                .modal-header {
                background-color: #007bff;
                color: white;
                border-top-left-radius: 8px;
                border-top-right-radius: 8px;
                }
                .modal-footer {
                border-top: 1px solid #dee2e6;
                }
            </style>

            <div class="container mt-5 treatment-container">
                <h1 class="text-center mb-4">Kế hoạch điều trị bệnh nhân</h1>

                <!-- Navigation tabs -->
                <div class="text-center mb-4">
                    <a href="/clinic/treatment_plans" class="btn btn-primary mx-2 active">Kế hoạch điều trị</a>
                    <a href="/clinic/patient_care" class="btn btn-outline-primary mx-2">Theo dõi chăm sóc</a>
                </div>

                <!-- Quick Access Section - NEW -->
                <div class="quick-access-section">
                    <h3 class="section-heading">Truy cập nhanh</h3>
                    <p>Thêm mới kế hoạch điều trị mà không cần tìm kiếm bệnh nhân trước</p>

                    <!-- Button to open patient selection modal -->
                    <button type="button" class="quick-access-btn" data-bs-toggle="modal" data-bs-target="#quickCreateModal">
                        <i class="fa fa-plus-circle me-2"></i>Tạo kế hoạch điều trị mới
                    </button>
                </div>

                <!-- Search Form -->
                <form method="POST" action="/clinic/treatment_plans" class="search-form mb-4">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="search_value">Tìm kiếm bệnh nhân (mã hoặc tên):</label>
                        <input type="text" class="form-control" id="search_value" name="search_value"
                               t-att-value="search_value or ''"
                               placeholder="Nhập mã hoặc tên bệnh nhân"/>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Tìm kiếm</button>
                </form>

                <!-- Patient Information (when specific patient is found) -->
                <t t-if="patient">
                    <div class="patient-info">
                        <h3 class="section-heading">Thông tin bệnh nhân</h3>
                        <div class="row patient-data">
                            <div class="col-md-6">
                                <p>
                                    <strong>Mã bệnh nhân:</strong>
                                    <t t-esc="patient.code"/>
                                </p>
                                <p>
                                    <strong>Họ và tên:</strong>
                                    <t t-esc="patient.name"/>
                                </p>
                                <p>
                                    <strong>Giới tính:</strong>
                                    <t t-if="patient.gender == 'male'">Nam</t>
                                    <t t-elif="patient.gender == 'female'">Nữ</t>
                                    <t t-else="">Khác</t>
                                </p>
                                <p>
                                    <strong>Tuổi:</strong>
                                    <t t-esc="patient.age"/>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    <strong>Ngày sinh:</strong>
                                    <t t-esc="patient.date_of_birth"/>
                                </p>
                                <p>
                                    <strong>Số điện thoại:</strong>
                                    <t t-esc="patient.phone or 'Không có'"/>
                                </p>
                                <p>
                                    <strong>Email:</strong>
                                    <t t-esc="patient.email or 'Không có'"/>
                                </p>
                                <p>
                                    <strong>Loại bệnh nhân:</strong>
                                    <t t-if="patient.patient_type == 'outpatient'">Ngoại trú</t>
                                    <t t-elif="patient.patient_type == 'inpatient'">Nội trú</t>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Treatment Plans for specific patient -->
                    <div class="treatment-list">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="section-heading mb-0">Danh sách kế hoạch điều trị</h3>
                            <a t-att-href="'/clinic/treatment_plan/create?patient_id=%s' % patient.id"
                               class="btn btn-success">
                                <i class="fa fa-plus-circle"></i>
                                Tạo kế hoạch mới
                            </a>
                        </div>
                        <t t-if="treatment_plans">
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã kế hoạch</th>
                                            <th>Ngày bắt đầu</th>
                                            <th>Ngày kết thúc</th>
                                            <th>Số quá trình</th>
                                            <th>Chi tiết</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="treatment_plans" t-as="plan">
                                            <tr>
                                                <td>
                                                    <t t-esc="plan.code"/>
                                                </td>
                                                <td>
                                                    <t t-esc="plan.start_date"/>
                                                </td>
                                                <td>
                                                    <t t-if="plan.end_date" t-esc="plan.end_date"/>
                                                    <t t-else="">Chưa kết thúc</t>
                                                </td>
                                                <td>
                                                    <t t-esc="len(plan.treatment_process_ids)"/>
                                                </td>
                                                <td>
                                                    <a t-att-href="'/clinic/treatment_plan_details/%s' % plan.id"
                                                       class="action-btn">
                                                        Xem chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="no-data">
                                <p>Bệnh nhân chưa có kế hoạch điều trị nào.</p>
                            </div>
                        </t>
                    </div>
                </t>

                <!-- When no patient is selected, show all treatment plans -->
                <t t-elif="all_treatment_plans">
                    <div class="treatment-list">
                        <h3 class="section-heading">Tất cả kế hoạch điều trị</h3>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã kế hoạch</th>
                                        <th>Mã bệnh nhân</th>
                                        <th>Tên bệnh nhân</th>
                                        <th>Ngày bắt đầu</th>
                                        <th>Ngày kết thúc</th>
                                        <th>Số quá trình</th>
                                        <th>Chi tiết</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="all_treatment_plans" t-as="plan">
                                        <tr>
                                            <td>
                                                <t t-esc="plan.code"/>
                                            </td>
                                            <td>
                                                <t t-esc="plan.patient_id.code"/>
                                            </td>
                                            <td>
                                                <t t-esc="plan.patient_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="plan.start_date"/>
                                            </td>
                                            <td>
                                                <t t-if="plan.end_date" t-esc="plan.end_date"/>
                                                <t t-else="">Chưa kết thúc</t>
                                            </td>
                                            <td>
                                                <t t-esc="len(plan.treatment_process_ids)"/>
                                            </td>
                                            <td>
                                                <a t-att-href="'/clinic/treatment_plan_details/%s' % plan.id"
                                                   class="action-btn">
                                                    Xem chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <t t-if="search_value">
                        <div class="alert alert-warning text-center">
                            <i class="fa fa-exclamation-triangle"></i>
                            Không tìm thấy bệnh nhân nào với thông tin đã nhập.
                        </div>
                    </t>
                    <t t-else="">
                        <div class="alert alert-info text-center">
                            <i class="fa fa-info-circle"></i>
                            Chưa có kế hoạch điều trị nào trong hệ thống.
                        </div>
                    </t>
                </t>
            </div>

            <!-- Quick Create Modal - NEW -->
            <div class="modal fade" id="quickCreateModal" tabindex="-1" aria-labelledby="quickCreateModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="quickCreateModalLabel">Tạo kế hoạch điều trị mới</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="quickCreateForm" method="POST" action="/clinic/treatment_plan/create">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                <div class="form-group mb-3">
                                    <label for="patient_selection" class="form-label">Chọn bệnh nhân:</label>
                                    <select class="form-select" id="patient_selection" name="patient_id" required="required">
                                        <option value="">-- Chọn bệnh nhân --</option>
                                        <t t-foreach="request.env['clinic.patient'].sudo().search([])" t-as="p">
                                            <option t-att-value="p.id">
                                                <t t-esc="p.name"/> (<t t-esc="p.code"/>)
                                            </option>
                                        </t>
                                    </select>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="start_date" class="form-label">Ngày bắt đầu:</label>
                                    <input type="date" class="form-control" id="start_date" name="start_date"
                                           t-att-value="datetime.date.today().strftime('%Y-%m-%d')" required="required"/>
                                </div>

                                <div class="form-group mb-3">
                                    <label for="end_date" class="form-label">Ngày kết thúc (không bắt buộc):</label>
                                    <input type="date" class="form-control" id="end_date" name="end_date"/>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                            <button type="submit" form="quickCreateForm" class="btn btn-primary">Tạo kế hoạch</button>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>