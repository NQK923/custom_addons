                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="heart_rate">Nhịp tim (bpm)</label>
                                    <input type="number" class="form-control" id="heart_rate"
                                           name="heart_rate" t-att-value="care.heart_rate"/>
                                </div>
                            </div>
