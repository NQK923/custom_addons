                                <div class="form-group">
                                    <label for="oxygen_saturation">Độ bão hòa oxy (%)</label>
                                    <input type="number" step="0.1" class="form-control" id="oxygen_saturation"
                                           name="oxygen_saturation" t-att-value="care.oxygen_saturation"/>
                                </div>
                            </div>
                        </div>

