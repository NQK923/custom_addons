                <div class="form-card">
                    <h3 class="section-heading">Thông tin chăm sóc bệnh nhân</h3>
                    <form t-att-action="'/clinic/patient_care/edit/%s' % care.id" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <!-- Basic info -->
                        <div class="row">
                            <div class="col-md-6">
