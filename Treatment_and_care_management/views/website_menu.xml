<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define URL actions -->
    <record id="action_treatment_management_website" model="ir.actions.act_url">
        <field name="name">Quản lý điều trị</field>
        <field name="url">/clinic/treatment_plans</field>
        <field name="target">self</field>
    </record>

    <!-- Add only one main menu to website -->
    <record id="website_menu_treatment_management" model="website.menu">
        <field name="name">Quản lý điều trị</field>
        <field name="url">/clinic/treatment_plans</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">51</field>
    </record>
</odoo>