<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="complaint_statistics_template" name="Thống kê khiếu nại">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/healthcare/dashboard">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Thống kê khiếu nại</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0">
                            <i class="fa fa-chart-line mr-2"></i>
                            Thống kê khiếu nại bệnh nhân
                        </h3>
                    </div>
                    <div class="card-body">
                        <!-- Bộ lọc theo ngày -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <form method="get" action="/healthcare/complaint_statistics" class="form-inline bg-light p-3 rounded">
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_from" class="mr-2">Từ ngày:</label>
                                        <input type="date" class="form-control" id="date_from" name="date_from" t-att-value="date_from"/>
                                    </div>
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_to" class="mr-2">Đến ngày:</label>
                                        <input type="date" class="form-control" id="date_to" name="date_to" t-att-value="date_to"/>
                                    </div>
                                    <div class="form-group mb-2 mr-2">
                                        <label for="filter_category" class="mr-2">Phân loại:</label>
                                        <select class="form-control" id="filter_category" name="filter_category">
                                            <option value="">Tất cả</option>
                                            <option value="service">Dịch vụ</option>
                                            <option value="staff">Nhân viên</option>
                                            <option value="facility">Cơ sở vật chất</option>
                                            <option value="billing">Thanh toán</option>
                                            <option value="other">Khác</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-danger mb-2">Lọc</button>
                                </form>
                            </div>
                        </div>

                        <!-- Biểu đồ dữ liệu khiếu nại -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Khiếu nại theo phân loại</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="complaintCategoryChart" width="100%" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Thời gian giải quyết trung bình</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="resolutionTimeChart" width="100%" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tab bảng dữ liệu chi tiết và biểu đồ -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <ul class="nav nav-tabs" id="statisticsTabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="table-tab" data-toggle="tab" href="#table" role="tab" aria-controls="table" aria-selected="true">
                                            <i class="fa fa-table"></i> Bảng dữ liệu
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="graph-tab" data-toggle="tab" href="#graph" role="tab" aria-controls="graph" aria-selected="false">
                                            <i class="fa fa-chart-bar"></i> Biểu đồ
                                        </a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="statisticsTabContent">
                                    <div class="tab-pane fade show active" id="table" role="tabpanel" aria-labelledby="table-tab">
                                        <div class="table-responsive mt-3">
                                            <table class="table table-striped table-hover" id="statisticsTable">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>Mã khiếu nại</th>
                                                        <th>Bệnh nhân</th>
                                                        <th>Ngày khiếu nại</th>
                                                        <th>Phân loại</th>
                                                        <th>Mức độ ưu tiên</th>
                                                        <th>Trạng thái</th>
                                                        <th>Người phụ trách</th>
                                                        <th>Thời gian giải quyết (ngày)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="statistics" t-as="stat">
                                                        <tr>
                                                            <td><t t-esc="stat.name"/></td>
                                                            <td><t t-esc="stat.patient_id.name"/></td>
                                                            <td><t t-esc="stat.complaint_date"/></td>
                                                            <td>
                                                                <t t-if="stat.category == 'service'">Dịch vụ</t>
                                                                <t t-elif="stat.category == 'staff'">Nhân viên</t>
                                                                <t t-elif="stat.category == 'facility'">Cơ sở vật chất</t>
                                                                <t t-elif="stat.category == 'billing'">Thanh toán</t>
                                                                <t t-else="">Khác</t>
                                                            </td>
                                                            <td>
                                                                <span t-att-class="'badge ' + ('badge-danger' if stat.priority == '2' else 'badge-warning' if stat.priority == '1' else 'badge-secondary')">
                                                                    <t t-if="stat.priority == '2'">Cao</t>
                                                                    <t t-elif="stat.priority == '1'">Trung bình</t>
                                                                    <t t-elif="stat.priority == '0'">Thấp</t>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span t-att-class="'badge ' + ('badge-warning' if stat.state == 'new' else 'badge-primary' if stat.state == 'in_progress' else 'badge-success' if stat.state == 'resolved' else 'badge-secondary')">
                                                                    <t t-if="stat.state == 'new'">Mới</t>
                                                                    <t t-elif="stat.state == 'in_progress'">Đang xử lý</t>
                                                                    <t t-elif="stat.state == 'resolved'">Đã giải quyết</t>
                                                                    <t t-elif="stat.state == 'cancelled'">Đã hủy</t>
                                                                </span>
                                                            </td>
                                                            <td><t t-esc="stat.user_id.name"/></td>
                                                            <td>
                                                                <t t-if="stat.resolution_time">
                                                                    <t t-esc="stat.resolution_time"/>
                                                                </t>
                                                                <t t-else="">-</t>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="graph" role="tabpanel" aria-labelledby="graph-tab">
                                        <div class="row mt-3">
                                            <div class="col-md-6">
                                                <div class="card">
                                                    <div class="card-header bg-light">
                                                        <h5 class="mb-0">Phân bố trạng thái khiếu nại</h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <canvas id="stateChart" width="100%" height="250"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="card">
                                                    <div class="card-header bg-light">
                                                        <h5 class="mb-0">Khiếu nại theo mức độ ưu tiên</h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <canvas id="priorityChart" width="100%" height="250"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- JavaScript for DataTable and Charts -->
            <script type="text/javascript">
                $(document).ready(function() {
                    // Initialize DataTable
                    $('#statisticsTable').DataTable({
                        responsive: true,
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.10.22/i18n/Vietnamese.json'
                        },
                        order: [[2, 'desc']], // Sort by complaint date
                        pageLength: 10
                    });

                    // Complaint by Category Chart
                    var categoryData = <t t-raw="json.dumps(category_data)"/>;
                    var categoryLabels = [];
                    var categoryData = [];
                    var categoryColors = [
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ];

                    categoryData.forEach(function(item, index) {
                        categoryLabels.push(getCategoryName(item.category));
                        categoryData.push(item.count);
                    });

                    var categoryCtx = document.getElementById('complaintCategoryChart').getContext('2d');
                    var categoryChart = new Chart(categoryCtx, {
                        type: 'pie',
                        data: {
                            labels: categoryLabels,
                            datasets: [{
                                data: categoryData,
                                backgroundColor: categoryColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'right',
                            },
                            title: {
                                display: true,
                                text: 'Phân bố khiếu nại theo loại'
                            }
                        }
                    });

                    // Resolution Time Chart
                    var resolutionData = <t t-raw="json.dumps(resolution_data)"/>;
                    var resolutionLabels = [];
                    var resolutionTimes = [];
                    var resolutionColors = [
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ];

                    resolutionData.forEach(function(item, index) {
                        resolutionLabels.push(getCategoryName(item.category));
                        resolutionTimes.push(item.avg_time);
                    });

                    var resolutionCtx = document.getElementById('resolutionTimeChart').getContext('2d');
                    var resolutionChart = new Chart(resolutionCtx, {
                        type: 'bar',
                        data: {
                            labels: resolutionLabels,
                            datasets: [{
                                label: 'Thời gian giải quyết trung bình (ngày)',
                                data: resolutionTimes,
                                backgroundColor: resolutionColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            },
                            title: {
                                display: true,
                                text: 'Thời gian giải quyết trung bình theo loại khiếu nại'
                            }
                        }
                    });

                    // State Distribution Chart
                    var stateData = <t t-raw="json.dumps(state_data)"/>;
                    var stateLabels = ['Mới', 'Đang xử lý', 'Đã giải quyết', 'Đã hủy'];
                    var stateValues = [
                        stateData.new || 0,
                        stateData.in_progress || 0,
                        stateData.resolved || 0,
                        stateData.cancelled || 0
                    ];
                    var stateColors = [
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ];

                    var stateCtx = document.getElementById('stateChart').getContext('2d');
                    var stateChart = new Chart(stateCtx, {
                        type: 'doughnut',
                        data: {
                            labels: stateLabels,
                            datasets: [{
                                data: stateValues,
                                backgroundColor: stateColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'right',
                            },
                            title: {
                                display: true,
                                text: 'Phân bố trạng thái khiếu nại'
                            }
                        }
                    });

                    // Priority Chart
                    var priorityData = <t t-raw="json.dumps(priority_data)"/>;
                    var priorityLabels = ['Thấp', 'Trung bình', 'Cao'];
                    var priorityValues = [
                        priorityData['0'] || 0,
                        priorityData['1'] || 0,
                        priorityData['2'] || 0
                    ];
                    var priorityColors = [
                        'rgba(108, 117, 125, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(220, 53, 69, 0.8)'
                    ];

                    var priorityCtx = document.getElementById('priorityChart').getContext('2d');
                    var priorityChart = new Chart(priorityCtx, {
                        type: 'pie',
                        data: {
                            labels: priorityLabels,
                            datasets: [{
                                data: priorityValues,
                                backgroundColor: priorityColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'right',
                            },
                            title: {
                                display: true,
                                text: 'Phân bố mức độ ưu tiên khiếu nại'
                            }
                        }
                    });

                    // Helper functions
                    function getCategoryName(category) {
                        switch(category) {
                            case 'service': return 'Dịch vụ';
                            case 'staff': return 'Nhân viên';
                            case 'facility': return 'Cơ sở vật chất';
                            case 'billing': return 'Thanh toán';
                            default: return 'Khác';
                        }
                    }
                });
            </script>
        </t>
    </template>
</odoo>