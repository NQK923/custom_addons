<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="complaint_dashboard_template" name="Bảng điều khiển khiếu nại">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/healthcare/dashboard">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Phân tích khiếu nại</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0">
                            <i class="fa fa-chart-bar mr-2"></i>
                            Bảng điều khiển phân tích khiếu nại
                        </h3>
                    </div>
                    <div class="card-body">
                        <!-- Bộ lọc theo ngày -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <form method="get" action="/healthcare/complaint_dashboard" class="form-inline bg-light p-3 rounded">
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_from" class="mr-2">Từ ngày:</label>
                                        <input type="date" class="form-control" id="date_from" name="date_from" t-att-value="date_from"/>
                                    </div>
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_to" class="mr-2">Đến ngày:</label>
                                        <input type="date" class="form-control" id="date_to" name="date_to" t-att-value="date_to"/>
                                    </div>
                                    <button type="submit" class="btn btn-danger mb-2">Lọc</button>
                                </form>
                            </div>
                        </div>

                        <!-- Thống kê tổng quan -->
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card bg-danger text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Tổng số khiếu nại</h5>
                                        <h2 class="display-4"><t t-esc="summary_stats['total_complaints'] or 0"/></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-success text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Thời gian giải quyết trung bình</h5>
                                        <h2 class="display-4">
                                            <t t-if="summary_stats['avg_resolution_time']">
                                                <t t-esc="round(summary_stats['avg_resolution_time'], 1)"/>
                                            </t>
                                            <t t-else="">0.0</t>
                                            <small>ngày</small>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card bg-info text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Tỷ lệ đã giải quyết</h5>
                                        <h2 class="display-4">
                                            <t t-if="summary_stats['total_complaints'] and summary_stats['resolved_complaints']">
                                                <t t-esc="round(summary_stats['resolved_complaints'] * 100 / summary_stats['total_complaints'], 1)"/>%
                                            </t>
                                            <t t-else="">0%</t>
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Phân loại trạng thái khiếu nại -->
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card bg-warning text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Mới</h5>
                                        <h2><t t-esc="summary_stats['new_complaints'] or 0"/></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Đang xử lý</h5>
                                        <h2><t t-esc="summary_stats['in_progress_complaints'] or 0"/></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Đã giải quyết</h5>
                                        <h2><t t-esc="summary_stats['resolved_complaints'] or 0"/></h2>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-secondary text-white mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">Đã hủy</h5>
                                        <h2><t t-esc="summary_stats['cancelled_complaints'] or 0"/></h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Biểu đồ khiếu nại theo phân loại -->
                        <div class="row mt-5">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Khiếu nại theo phân loại</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="complaintCategoryChart" width="100%" height="50"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Khiếu nại theo tháng</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="complaintMonthChart" width="100%" height="50"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thống kê theo phân loại -->
                        <div class="row mt-5">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Thống kê khiếu nại theo phân loại</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>Phân loại</th>
                                                        <th>Tổng số khiếu nại</th>
                                                        <th>Mới</th>
                                                        <th>Đang xử lý</th>
                                                        <th>Đã giải quyết</th>
                                                        <th>Đã hủy</th>
                                                        <th>Thời gian giải quyết TB (ngày)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="category_stats" t-as="cat">
                                                        <tr>
                                                            <td><t t-esc="cat['category_name']"/></td>
                                                            <td><t t-esc="cat['total_complaints']"/></td>
                                                            <td><t t-esc="cat['new_count']"/></td>
                                                            <td><t t-esc="cat['in_progress_count']"/></td>
                                                            <td><t t-esc="cat['resolved_count']"/></td>
                                                            <td><t t-esc="cat['cancelled_count']"/></td>
                                                            <td>
                                                                <t t-if="cat['avg_resolution_time']">
                                                                    <t t-esc="round(cat['avg_resolution_time'], 1)"/>
                                                                </t>
                                                                <t t-else="">0.0</t>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- JavaScript for Charts -->
            <script type="text/javascript">
                $(document).ready(function() {
                    // Complaint by Category Chart
                    var categoryData = <t t-raw="complaint_by_category"/>;
                    var categoryLabels = [];
                    var categoryValues = [];
                    var categoryColors = [
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(0, 123, 255, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(108, 117, 125, 0.8)'
                    ];

                    categoryData.forEach(function(item, index) {
                        categoryLabels.push(item.category || 'Không xác định');
                        categoryValues.push(item.count);
                    });

                    var categoryCtx = document.getElementById('complaintCategoryChart').getContext('2d');
                    var categoryChart = new Chart(categoryCtx, {
                        type: 'doughnut',
                        data: {
                            labels: categoryLabels,
                            datasets: [{
                                data: categoryValues,
                                backgroundColor: categoryColors,
                                borderColor: 'rgba(255, 255, 255, 1)',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'right',
                            },
                            title: {
                                display: true,
                                text: 'Phân bố khiếu nại theo loại'
                            },
                            animation: {
                                animateScale: true,
                                animateRotate: true
                            }
                        }
                    });

                    // Complaint by Month Chart
                    var monthData = <t t-raw="complaint_by_month"/>;
                    var monthLabels = [];
                    var newValues = [];
                    var inProgressValues = [];
                    var resolvedValues = [];
                    var cancelledValues = [];

                    monthData.forEach(function(item) {
                        monthLabels.push(item.month_name || 'Không xác định');
                        newValues.push(item.new || 0);
                        inProgressValues.push(item.in_progress || 0);
                        resolvedValues.push(item.resolved || 0);
                        cancelledValues.push(item.cancelled || 0);
                    });

                    var monthCtx = document.getElementById('complaintMonthChart').getContext('2d');
                    var monthChart = new Chart(monthCtx, {
                        type: 'bar',
                        data: {
                            labels: monthLabels,
                            datasets: [
                                {
                                    label: 'Mới',
                                    data: newValues,
                                    backgroundColor: 'rgba(255, 193, 7, 0.8)',
                                    borderColor: 'rgba(255, 193, 7, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Đang xử lý',
                                    data: inProgressValues,
                                    backgroundColor: 'rgba(0, 123, 255, 0.8)',
                                    borderColor: 'rgba(0, 123, 255, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Đã giải quyết',
                                    data: resolvedValues,
                                    backgroundColor: 'rgba(40, 167, 69, 0.8)',
                                    borderColor: 'rgba(40, 167, 69, 1)',
                                    borderWidth: 1
                                },
                                {
                                    label: 'Đã hủy',
                                    data: cancelledValues,
                                    backgroundColor: 'rgba(108, 117, 125, 0.8)',
                                    borderColor: 'rgba(108, 117, 125, 1)',
                                    borderWidth: 1
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            title: {
                                display: true,
                                text: 'Khiếu nại theo tháng'
                            },
                            scales: {
                                xAxes: [{
                                    stacked: true
                                }],
                                yAxes: [{
                                    stacked: true,
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            }
                        }
                    });
                });
            </script>
        </t>
    </template>
</odoo>