<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="feedback_statistics_template" name="Thống kê phản hồi">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/healthcare/dashboard">Trang chủ</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Thống kê phản hồi</li>
                            </ol>
                        </nav>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="fa fa-chart-line mr-2"></i>
                            Thống kê phản hồi bệnh nhân
                        </h3>
                    </div>
                    <div class="card-body">
                        <!-- Bộ lọc theo ngày -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <form method="get" action="/healthcare/feedback_statistics" class="form-inline bg-light p-3 rounded">
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_from" class="mr-2">Từ ngày:</label>
                                        <input type="date" class="form-control" id="date_from" name="date_from" t-att-value="date_from"/>
                                    </div>
                                    <div class="form-group mb-2 mr-2">
                                        <label for="date_to" class="mr-2">Đến ngày:</label>
                                        <input type="date" class="form-control" id="date_to" name="date_to" t-att-value="date_to"/>
                                    </div>
                                    <button type="submit" class="btn btn-primary mb-2">Lọc</button>
                                </form>
                            </div>
                        </div>

                        <!-- Biểu đồ dữ liệu phản hồi -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Phân bố loại phản hồi</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="feedbackTypeChart" width="100%" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Đánh giá mức độ hài lòng</h5>
                                    </div>
                                    <div class="card-body">
                                        <canvas id="satisfactionChart" width="100%" height="300"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tab bảng dữ liệu chi tiết và biểu đồ -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <ul class="nav nav-tabs" id="statisticsTabs" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="table-tab" data-toggle="tab" href="#table" role="tab" aria-controls="table" aria-selected="true">
                                            <i class="fa fa-table"></i> Bảng dữ liệu
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="graph-tab" data-toggle="tab" href="#graph" role="tab" aria-controls="graph" aria-selected="false">
                                            <i class="fa fa-chart-bar"></i> Biểu đồ
                                        </a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="statisticsTabContent">
                                    <div class="tab-pane fade show active" id="table" role="tabpanel" aria-labelledby="table-tab">
                                        <div class="table-responsive mt-3">
                                            <table class="table table-striped table-hover" id="statisticsTable">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>Mã phản hồi</th>
                                                        <th>Bệnh nhân</th>
                                                        <th>Phòng ban</th>
                                                        <th>Ngày phản hồi</th>
                                                        <th>Loại phản hồi</th>
                                                        <th>Đánh giá</th>
                                                        <th>Trạng thái</th>
                                                        <th>Khiếu nại</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="statistics" t-as="stat">
                                                        <tr>
                                                            <td><t t-esc="stat.name"/></td>
                                                            <td><t t-esc="stat.patient_id.name"/></td>
                                                            <td><t t-esc="stat.department_id.name or ''"/></td>
                                                            <td><t t-esc="stat.feedback_date"/></td>
                                                            <td>
                                                                <t t-if="stat.feedback_type == 'compliment'">Khen ngợi</t>
                                                                <t t-elif="stat.feedback_type == 'suggestion'">Góp ý</t>
                                                                <t t-elif="stat.feedback_type == 'complaint'">Khiếu nại</t>
                                                                <t t-elif="stat.feedback_type == 'question'">Hỏi đáp</t>
                                                                <t t-else="">Khác</t>
                                                            </td>
                                                            <td>
                                                                <div class="ratings">
                                                                    <t t-foreach="range(5)" t-as="i">
                                                                        <i t-att-class="'fa fa-star' + (' text-warning' if stat.satisfaction_rating and int(stat.satisfaction_rating) > i else '')"></i>
                                                                    </t>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <span t-att-class="'badge ' + ('badge-danger' if stat.state == 'new' else 'badge-success' if stat.state == 'noted' else 'badge-secondary')">
                                                                    <t t-if="stat.state == 'new'">Mới</t>
                                                                    <t t-elif="stat.state == 'noted'">Đã ghi nhận</t>
                                                                    <t t-elif="stat.state == 'cancelled'">Đã hủy</t>
                                                                </span>
                                                            </td>
                                                            <td>
                                                                <span t-if="stat.has_complaint" class="badge badge-danger">Có</span>
                                                                <span t-else="" class="badge badge-secondary">Không</span>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="graph" role="tabpanel" aria-labelledby="graph-tab">
                                        <div class="row mt-3">
                                            <div class="col-md-6">
                                                <div class="card">
                                                    <div class="card-header bg-light">
                                                        <h5 class="mb-0">Phân bố trạng thái phản hồi</h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <canvas id="stateChart" width="100%" height="250"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="card">
                                                    <div class="card-header bg-light">
                                                        <h5 class="mb-0">Phản hồi theo phòng ban</h5>
                                                    </div>
                                                    <div class="card-body">
                                                        <canvas id="departmentChart" width="100%" height="250"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- JavaScript for DataTable and Charts -->
            <script type="text/javascript">
                $(document).ready(function() {
                    // Initialize DataTable
                    $('#statisticsTable').DataTable({
                        responsive: true,
                        language: {
                            url: '//cdn.datatables.net/plug-ins/1.10.22/i18n/Vietnamese.json'
                        },
                        order: [[3, 'desc']], // Sort by feedback date
                        pageLength: 10
                    });

                    // Feedback by Type Chart
                    var feedbackTypeData = <t t-raw="json.dumps(feedback_by_type)"/>;
                    var typeLabels = [];
                    var typeData = [];
                    var typeColors = [
                        'rgba(23, 162, 184, 0.8)',
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(108, 117, 125, 0.8)',
                        'rgba(73, 80, 87, 0.8)'
                    ];

                    feedbackTypeData.forEach(function(item, index) {
                        typeLabels.push(getFeedbackTypeName(item.feedback_type));
                        typeData.push(item.count);
                    });

                    var typeCtx = document.getElementById('feedbackTypeChart').getContext('2d');
                    var typeChart = new Chart(typeCtx, {
                        type: 'pie',
                        data: {
                            labels: typeLabels,
                            datasets: [{
                                data: typeData,
                                backgroundColor: typeColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            legend: {
                                position: 'right',
                            },
                            title: {
                                display: true,
                                text: 'Phân bố loại phản hồi'
                            }
                        }
                    });

                    // Satisfaction Rating Chart
                    var satisfactionData = <t t-raw="json.dumps(feedback_by_rating)"/>;
                    var ratingLabels = [];
                    var ratingData = [];
                    var ratingColors = [
                        'rgba(220, 53, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(108, 117, 125, 0.8)',
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(0, 123, 255, 0.8)'
                    ];

                    satisfactionData.forEach(function(item, index) {
                        ratingLabels.push(getSatisfactionName(item.satisfaction_rating));
                        ratingData.push(item.count);
                    });

                    var ratingCtx = document.getElementById('satisfactionChart').getContext('2d');
                    var ratingChart = new Chart(ratingCtx, {
                        type: 'bar',
                        data: {
                            labels: ratingLabels,
                            datasets: [{
                                label: 'Số lượng',
                                data: ratingData,
                                backgroundColor: ratingColors,
                                borderColor: '#ffffff',
                                borderWidth: 1
                            }]
                        },
                        options: {
                            responsive: true,
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        beginAtZero: true
                                    }
                                }]
                            },
                            title: {
                                display: true,
                                text: 'Phân bố đánh giá mức độ hài lòng'
                            }
                        }
                    });

                    // Helper functions
                    function getFeedbackTypeName(type) {
                        switch (type) {
                            case 'compliment': return 'Khen ngợi';
                            case 'complaint': return 'Khiếu nại';
                            case 'suggestion': return 'Góp ý';
                            case 'question': return 'Hỏi đáp';
                            default: return 'Khác';
                        }
                    }

                    function getSatisfactionName(rating) {
                        switch (rating) {
                            case '1': return 'Rất không hài lòng';
                            case '2': return 'Không hài lòng';
                            case '3': return 'Bình thường';
                            case '4': return 'Hài lòng';
                            case '5': return 'Rất hài lòng';
                            default: return 'Không đánh giá';
                        }
                    }
                });
            </script>
        </t>
    </template>
</odoo>