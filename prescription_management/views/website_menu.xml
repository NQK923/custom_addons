<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Define action for the website menu -->
    <record id="prescription_website_action" model="ir.actions.act_url">
        <field name="name">Quản lý dược phẩm</field>
        <field name="url">/pharmacy/prescriptions</field>
        <field name="target">self</field>
    </record>

    <!-- Add menu to website -->
    <record id="website_menu_prescriptions" model="website.menu">
        <field name="name">Quản lý dược phẩm</field>
        <field name="url">/pharmacy/prescriptions</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">55</field>
    </record>
</odoo>