<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for listing clinic services -->
    <template id="clinic_services_template" name="Clinic Services">
        <t t-call="website.layout">
            <div class="container mt-4">
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h1>Dịch vụ phòng khám</h1>
                    </div>
                    <div class="col-md-4">
                        <form action="/pharmacy/services" method="GET" class="input-group">
                            <input type="text" name="search" class="form-control" placeholder="Tìm kiếm dịch vụ..." t-att-value="search or ''"/>
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center" width="5%">#</th>
                                        <th>Tên dịch vụ</th>
                                        <th class="text-center" width="20%">Giá dịch vụ (VNĐ)</th>
                                        <th class="text-center" width="20%">Được bảo hiểm chi trả</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-if="clinic_services">
                                        <t t-foreach="clinic_services" t-as="service">
                                            <tr>
                                                <td class="text-center" t-esc="service_index + 1"/>
                                                <td>
                                                    <strong t-esc="service.service_name"/>
                                                    <t t-if="service.description">
                                                        <div class="text-muted small" t-esc="service.description"/>
                                                    </t>
                                                </td>
                                                <td class="text-center" t-esc="'%.2f' % service.price"/>
                                                <td class="text-center">
                                                    <span t-if="service.insurance_covered" class="badge badge-success">
                                                        <i class="fa fa-check-circle"></i> Có
                                                    </span>
                                                    <span t-if="not service.insurance_covered" class="badge badge-danger">
                                                        <i class="fa fa-times-circle"></i> Không
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <tr>
                                            <td colspan="4" class="text-center py-4">
                                                <div class="alert alert-info mb-0">
                                                    Không có dịch vụ nào được tìm thấy.
                                                </div>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <p><strong>Lưu ý:</strong> Giá dịch vụ có thể thay đổi theo từng thời điểm. Vui lòng liên hệ với nhân viên phòng khám để biết thêm chi tiết.</p>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>