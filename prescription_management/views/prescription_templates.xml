<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template for listing prescriptions -->
    <template id="prescription_list_template" name="Prescription List">
        <t t-call="website.layout">
            <style>
                .prescription-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 1200px;
                    margin: 0 auto;
                }
                .patient-info, .prescription-list {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .patient-info h3, .prescription-list h3 {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .search-form {
                    max-width: 500px;
                    margin: 0 auto 30px auto;
                }
                .search-form .form-group {
                    margin-bottom: 15px;
                }
                .search-form label {
                    font-weight: 600;
                    color: #495057;
                }
                .search-form .btn-primary {
                    width: 100%;
                    padding: 10px;
                    font-size: 1rem;
                }
                .prescription-card {
                    margin-bottom: 15px;
                    transition: all 0.3s ease;
                }
                .prescription-card:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                }
                .prescription-card .card-header {
                    background-color: #f0f5ff;
                    font-weight: bold;
                }
                .prescription-card .card-footer {
                    background-color: #f8f9fa;
                }
                .no-data {
                    color: #6c757d;
                    font-style: italic;
                    font-size: 1rem;
                    text-align: center;
                    padding: 20px;
                }
                .badge-custom {
                    font-size: 0.9rem;
                    padding: 5px 10px;
                }
            </style>
            <div class="container mt-5 prescription-container">
                <h1 class="text-center mb-5">Đơn thuốc của bệnh nhân</h1>

                <!-- Form tìm kiếm -->
                <form method="POST" action="/pharmacy/prescriptions" class="search-form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="search_value">Nhập mã hoặc tên bệnh nhân:</label>
                        <input type="text" class="form-control" id="search_value" name="search_value" t-att-value="search_value or ''" placeholder="Ví dụ: 4437480b hoặc Nguyễn Văn A"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </form>

                <!-- Thông tin bệnh nhân -->
                <t t-if="patient">
                    <div class="patient-info">
                        <h3>Thông tin bệnh nhân</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Mã:</strong> <t t-esc="patient.code"/></p>
                                <p><strong>Họ tên:</strong> <t t-esc="patient.name"/></p>
                                <p><strong>Giới tính:</strong> <t t-esc="patient.gender"/></p>
                                <p><strong>Tuổi:</strong> <t t-esc="patient.age"/></p>
                            </div>
                            <div class="col-md-6">
                                <t t-if="patient.has_insurance">
                                    <p><strong>Số thẻ BHYT:</strong> <t t-esc="patient.insurance_number"/></p>
                                    <p><strong>Nơi ĐKKCB:</strong> <t t-esc="patient.insurance_facility"/></p>
                                    <p><strong>Tuyến:</strong> <t t-esc="patient.insurance_tier"/></p>
                                    <p><strong>Có giá trị đến:</strong> <t t-esc="patient.insurance_expiry"/></p>
                                    <p><strong>Trạng thái:</strong> <t t-esc="patient.insurance_state"/></p>
                                </t>
                                <t t-else="">
                                    <p><strong>Bảo hiểm:</strong> <span class="no-data">Không có bảo hiểm</span></p>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Danh sách đơn thuốc -->
                    <div class="prescription-list">
                        <h3>Đơn thuốc</h3>
                        <t t-if="prescriptions">
                            <div class="row">
                                <t t-foreach="prescriptions" t-as="prescription">
                                    <div class="col-lg-6">
                                        <div class="card mb-3 prescription-card">
                                            <div class="card-header d-flex justify-content-between align-items-center">
                                                <span><t t-esc="prescription.name"/></span>
                                                <span class="badge badge-info badge-custom">
                                                    <t t-esc="prescription.date.strftime('%d/%m/%Y %H:%M')"/>
                                                </span>
                                            </div>
                                            <div class="card-body">
                                                <p><strong>Bác sĩ:</strong> <t t-esc="prescription.staff_id.name or 'N/A'"/></p>
                                                <p><strong>Số ngày uống:</strong> <t t-esc="prescription.numdate"/> ngày</p>
                                                <p><strong>Số loại thuốc:</strong> <t t-esc="len(prescription.prescription_line_ids)"/></p>
                                            </div>
                                            <div class="card-footer">
                                                <a t-att-href="'/pharmacy/prescription/%s' % prescription.id" class="btn btn-primary btn-sm">
                                                    Xem chi tiết
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </t>
                        <t t-else="">
                            <p class="no-data">Bệnh nhân chưa có đơn thuốc nào.</p>
                        </t>
                    </div>
                </t>
                <t t-elif="search_value">
                    <p class="mt-3 text-danger text-center">Không tìm thấy bệnh nhân nào.</p>
                </t>
            </div>
        </t>
    </template>

    <!-- Template for prescription details -->
    <template id="prescription_detail_template" name="Prescription Detail">
        <t t-call="website.layout">
            <style>
                .prescription-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 1200px;
                    margin: 0 auto;
                }
                .prescription-header, .prescription-body {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .prescription-header h3, .prescription-body h3 {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .info-row {
                    margin-bottom: 15px;
                }
                .info-row strong {
                    color: #495057;
                    min-width: 150px;
                    display: inline-block;
                }
                .table {
                    margin-bottom: 25px;
                    font-size: 0.95rem;
                }
                .table th {
                    background-color: #007bff;
                    color: #fff;
                    padding: 12px;
                    text-align: center;
                }
                .table td {
                    vertical-align: middle;
                    padding: 10px;
                }
                .dosage-cell {
                    background-color: #f0f8ff;
                }
                .instructions-cell {
                    background-color: #f5f5f5;
                }
                .back-button {
                    background-color: #6c757d;
                    color: white;
                    border: none;
                    padding: 8px 16px;
                    border-radius: 4px;
                    transition: background-color 0.3s;
                    text-decoration: none;
                    display: inline-block;
                    margin-bottom: 20px;
                }
                .back-button:hover {
                    background-color: #5a6268;
                    color: white;
                    text-decoration: none;
                }
                .notes-box {
                    background-color: #f8f9fa;
                    padding: 15px;
                    border-radius: 5px;
                    border-left: 4px solid #007bff;
                    margin-top: 20px;
                }
                @media print {
                    .back-button {
                        display: none;
                    }
                    .prescription-container {
                        box-shadow: none;
                        padding: 0;
                    }
                    body {
                        font-size: 12pt;
                    }
                    .print-button {
                        display: none;
                    }
                }
            </style>
            <div class="container mt-5 prescription-container">
                <a href="/pharmacy/prescriptions" class="back-button">
                    <i class="fa fa-arrow-left"></i> Quay lại danh sách
                </a>

                <button onclick="window.print()" class="btn btn-info float-right print-button">
                    <i class="fa fa-print"></i> In đơn thuốc
                </button>

                <div class="clearfix"></div>

                <div class="prescription-header">
                    <h3>Đơn thuốc: <t t-esc="prescription.name"/></h3>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-row">
                                <strong>Bệnh nhân:</strong> <t t-esc="prescription.patient_id.name"/>
                            </div>
                            <div class="info-row">
                                <strong>Mã bệnh nhân:</strong> <t t-esc="prescription.patient_id.code"/>
                            </div>
                            <div class="info-row">
                                <strong>Tuổi:</strong> <t t-esc="prescription.patient_id.age"/>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-row">
                                <strong>Bác sĩ:</strong> <t t-esc="prescription.staff_id.name or 'N/A'"/>
                            </div>
                            <div class="info-row">
                                <strong>Ngày kê đơn:</strong> <t t-esc="prescription.date.strftime('%d/%m/%Y %H:%M')"/>
                            </div>
                            <div class="info-row">
                                <strong>Số ngày uống:</strong> <t t-esc="prescription.numdate"/> ngày
                            </div>
                        </div>
                    </div>
                </div>

                <div class="prescription-body">
                    <h3>Chi tiết đơn thuốc</h3>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th width="5%">#</th>
                                <th width="30%">Tên thuốc</th>
                                <th width="10%">Số lượng</th>
                                <th width="25%">Liều lượng</th>
                                <th width="30%">Hướng dẫn</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="prescription_lines" t-as="line">
                                <tr>
                                    <td class="text-center"><t t-esc="line_index + 1"/></td>
                                    <td>
                                        <strong><t t-esc="line.product_id.name"/></strong><br/>
                                        <small class="text-muted"><t t-esc="line.product_id.code"/></small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-pill badge-primary">
                                            <t t-esc="line.quantity"/> <t t-esc="line.product_id.uom_id"/>
                                        </span>
                                    </td>
                                    <td class="dosage-cell"><t t-esc="line.dosage"/></td>
                                    <td class="instructions-cell"><t t-esc="line.instructions or '-'"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="prescription.notes">
                        <div class="notes-box">
                            <h5><i class="fa fa-sticky-note"></i> Ghi chú:</h5>
                            <p><t t-esc="prescription.notes"/></p>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>