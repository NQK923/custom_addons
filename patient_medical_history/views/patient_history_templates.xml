<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="patient_history_template" name="Patient History">
        <t t-call="website.layout">
            <style>
                .patient-history-container {
                    background-color: #f8f9fa;
                    padding: 30px;
                    border-radius: 10px;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                    max-width: 1200px;
                    margin: 0 auto;
                }
                .patient-info, .medical-history {
                    background-color: #fff;
                    padding: 20px;
                    border-radius: 8px;
                    margin-bottom: 25px;
                    border: 1px solid #dee2e6;
                }
                .patient-info h3, .medical-history h3 {
                    color: #007bff;
                    border-bottom: 2px solid #007bff;
                    padding-bottom: 8px;
                    margin-bottom: 20px;
                    font-size: 1.5rem;
                }
                .patient-info .row p {
                    margin: 8px 0;
                    font-size: 1rem;
                    color: #343a40;
                }
                .patient-info .row strong {
                    color: #495057;
                    min-width: 150px;
                    display: inline-block;
                }
                .medical-history h4 {
                    color: #343a40;
                    margin-top: 25px;
                    margin-bottom: 15px;
                    font-size: 1.25rem;
                }
                .table {
                    margin-bottom: 25px;
                    font-size: 0.95rem;
                }
                .table th {
                    background-color: #007bff;
                    color: #fff;
                    padding: 12px;
                    text-align: center;
                }
                .table td {
                    vertical-align: middle;
                    padding: 10px;
                    text-align: center;
                }
                .no-data {
                    color: #6c757d;
                    font-style: italic;
                    font-size: 1rem;
                    text-align: center;
                }
                .search-form {
                    max-width: 500px;
                    margin: 0 auto 30px auto;
                }
                .search-form .form-group {
                    margin-bottom: 15px;
                }
                .search-form label {
                    font-weight: 600;
                    color: #495057;
                }
                .search-form .btn-primary {
                    width: 100%;
                    padding: 10px;
                    font-size: 1rem;
                }
            </style>
            <div class="container mt-5 patient-history-container">
                <h1 class="text-center mb-5">Lịch sử khám bệnh nhân</h1>

                <!-- Form tìm kiếm -->
                <form method="POST" action="/clinic/patient_history" class="search-form">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <label for="search_value">Nhập mã hoặc tên bệnh nhân:</label>
                        <input type="text" class="form-control" id="search_value" name="search_value" t-att-value="search_value or ''" placeholder="Ví dụ: 4437480b hoặc Nguyễn Công Trình"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </form>

                <!-- Thông tin bệnh nhân -->
                <t t-if="patients">
                    <div class="patient-info">
                        <h3>Thông tin bệnh nhân</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Mã:</strong> <t t-esc="patients.code"/></p>
                                <p><strong>Họ tên:</strong> <t t-esc="patients.name"/></p>
                                <p><strong>Giới tính:</strong> <t t-esc="patients.gender"/></p>
                                <p><strong>Tuổi:</strong> <t t-esc="patients.age"/></p>
                            </div>
                            <div class="col-md-6">
                                <t t-if="patients.has_insurance">
                                    <p><strong>Số thẻ BHYT:</strong> <t t-esc="patients.insurance_number"/></p>
                                    <p><strong>Nơi ĐKKCB:</strong> <t t-esc="patients.insurance_facility"/></p>
                                    <p><strong>Tuyến:</strong> <t t-esc="patients.insurance_tier"/></p>
                                    <p><strong>Có giá trị đến:</strong> <t t-esc="patients.insurance_expiry"/></p>
                                    <p><strong>Trạng thái:</strong> <t t-esc="patients.insurance_state"/></p>
                                </t>
                                <t t-else="">
                                    <p><strong>Bảo hiểm:</strong> <span class="no-data">Không có bảo hiểm</span></p>
                                </t>
                            </div>
                        </div>
                    </div>

                    <!-- Lịch sử y tế -->
                    <t t-if="history">
                        <div class="medical-history">
                            <h3>Lịch sử y tế</h3>
                            <p><strong>Ngày ghi nhận:</strong> <t t-esc="history.history_date"/></p>

                            <h4>Kế hoạch điều trị</h4>
                            <t t-if="history.treatment_plans">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Ngày bắt đầu</th>
                                            <th>Ngày kết thúc</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="history.treatment_plans" t-as="plan">
                                            <tr>
                                                <td><t t-esc="plan.code"/></td>
                                                <td><t t-esc="plan.start_date"/></td>
                                                <td><t t-esc="plan.end_date or 'Chưa xác định'"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <p class="no-data">Chưa có kế hoạch điều trị.</p>
                            </t>

                            <h4>Quá trình điều trị</h4>
                            <t t-if="history.treatment_processes">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Dịch vụ</th>
                                            <th>Trạng thái</th>
                                            <th>Thời gian</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="history.treatment_processes" t-as="process">
                                            <tr>
                                                <td><t t-esc="process.code"/></td>
                                                <td><t t-esc="process.service_id.name"/></td>
                                                <td><t t-esc="process.state"/></td>
                                                <td><t t-esc="process.execution_time or 'Chưa thực hiện'"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <p class="no-data">Chưa có quá trình điều trị.</p>
                            </t>

                            <h4>Xét nghiệm</h4>
                            <t t-if="history.medical_tests">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Loại</th>
                                            <th>Ngày</th>
                                            <th>Kết quả</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="history.medical_tests" t-as="test">
                                            <tr>
                                                <td><t t-esc="test.test_code"/></td>
                                                <td><t t-esc="test.test_type"/></td>
                                                <td><t t-esc="test.test_date"/></td>
                                                <td><t t-esc="test.result or 'Chưa có'"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                            <t t-else="">
                                <p class="no-data">Chưa có xét nghiệm.</p>
                            </t>
                        </div>
                    </t>
                    <t t-else="">
                        <p class="no-data">Chưa có lịch sử y tế.</p>
                    </t>
                </t>
                <t t-else="" t-if="search_value">
                    <p class="mt-3 text-danger text-center">Không tìm thấy bệnh nhân nào.</p>
                </t>
            </div>
        </t>
    </template>
</odoo>